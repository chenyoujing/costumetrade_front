      <image src="../../../../images/delete_2.png" mode="aspectFit" class="option_delete" />
      <view class="option_text one_line">S</view>
    </view>
    <view class="update_option">
      <view class="option_num" style="width:20%;">2.</view>
      <image src="../../../../images/delete_2.png" mode="aspectFit" class="option_delete" />
