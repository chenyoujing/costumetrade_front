.Help_title{
  background-color: #52CAC1;
  color: #ffffff;
  text-align: center;
  font-size: 16px;
  line-height: 45px;
  height: 45px;
  position: relative;
  z-index: 9;
}
.Help_title image{
  width: 16px;
  height: 16px;
  padding: 14.5px 10px;
  position: absolute;
  left: 0;
}

.Help_container{
  position: absolute;
  top: 45px;
  left: 0;
  right: 0;
  bottom: 0;
}
.help_content{
  padding: 10px 15px;
}
.content_title,.content_text{
  padding: 10px;
  background-color: #DBF4F1;
}
.content_title{
  font-size: 18px;
  line-height: 24px;
  padding-bottom: 0;
}
.content_text{
  font-size: 16px;
  line-height: 20px;
  margin-bottom: 2px;
  position: relative;
}
.content_text image{
  width: 12px;
  height: 12px;
  padding: 14px;
  position: absolute;
  top: 0;
  right: 0;
}