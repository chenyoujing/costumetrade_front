<view style="overflow:hidden; min-height:100vh; position:relative;">
  <view class="title">设置</view>

  <view class="dictionary">
    <view class="dictionary_text {{current=='0' ? 'active' : ''}}" bindtap="dictionarytype" data-dictionary="0">员工管理
      <image src="../../../../images/down.png" mode="aspectFit" class="image_down " />
    </view>
    <view class="dictionary_text {{current=='1' ? 'active' : ''}}" bindtap="dictionarytype" data-dictionary="1">打印信息
      <image src="../../../../images/down.png" mode="aspectFit" class="image_down " />
    </view>
    <view class="dictionary_text {{current=='2' ? 'active' : ''}}" bindtap="dictionarytype" data-dictionary="2">高级设置
      <image src="../../../../images/down.png" mode="aspectFit" class="image_down " />
    </view>
    <view class="clear"></view>
  </view>
  <swiper interval="0" duration="500" current="{{current}}" bindchange="swiper_change">

    <!--员工管理-->
    <swiper-item>
      <scroll-view scroll-y style="bottom:0;">
        <view style="padding:10px;">
          <view class="staff bg-1">
            <image src="{{item.image ? item.image : '../../../../images/image_none.png'}}" mode="aspectFill" class="staff_tx" />
            <view class="staff_info">
              <view class="staff_info_name">名称：小鱼</view>
              <view class="staff_info_num">编号：001</view>
              <view class="staff_info_state">在职状态：在职</view>
              <view class="clear"></view>
            </view>
            <image src="../../../../images/update.png" mode="aspectFit" class="staff_modify" bindtap="staff_updata" />
          </view>
        </view>
      </scroll-view>
      <scroll-view scroll-y style="left:-{{staff_updata}};right:{{staff_updata}};" class="staff_updata">
        <view class="staff_updata_top">
          <view class="dictionary_input">
            <view class="dictionary_input_text1">姓名：</view>
            <input type="number" class="dictionary_input1" />
            <view class="clear"></view>
          </view>
          <view class="dictionary_input">
            <view class="dictionary_input_text1">微信号：</view>
            <input type="number" class="dictionary_input1" />
            <view class="clear"></view>
          </view>
          <view class="dictionary_input">
            <view class="dictionary_input_text1">打折：</view>
            <input type="number" class="dictionary_input1" />
            <view class="clear"></view>
          </view>
          <view class="dictionary_input">
            <view class="dictionary_input_text1">去零：</view>
            <input type="number" class="dictionary_input1" placeholder="去零规则(小于1元去掉，可以四舍五入)" />
            <view class="clear"></view>
          </view>
          <view class="dictionary_input">
            <view class="dictionary_input_text1">改价：</view>
            <input type="number" class="dictionary_input1" />
            <view class="clear"></view>
          </view>
        </view>
        <view class="print_info">四个权限</view>
        <checkbox-group>
          <label class="checkbox" wx:for="{{items}}" wx:key="id">
            <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
          </label>
        </checkbox-group>
      </scroll-view>
      <button class="submit" style="left:-{{staff_updata}};right:{{staff_updata}};" bindtap="staff_updata_close">保存</button>
    </swiper-item>

    <!--打印信息-->
    <swiper-item>
      <scroll-view scroll-y>
        <view class="print_info">打印信息</view>
        <view class="dictionary_input">
          <view class="dictionary_input_text1">编号：</view>
          <input type="number" class="dictionary_input1" />
          <view class="clear"></view>
        </view>
        <view class="dictionary_input">
          <view class="dictionary_input_text2">默认打印店铺二维码：</view>
            <radio-group>
              <label class="radio">
                <radio value="true" />是
              </label>
              <label class="radio">
                <radio value="false" checked />否
              </label>
            </radio-group>
          <view class="clear"></view>
        </view>
        <view class="dictionary_input">
          <view class="dictionary_input_text2">默认打印店铺logo：</view>
            <radio-group>
              <label class="radio">
                <radio value="true" />是
              </label>
              <label class="radio">
                <radio value="false" checked />否
              </label>
            </radio-group>
          <view class="clear"></view>
        </view>
        <view class="print_info">图片操作</view>
        <view class="image_operation">
          <view class="image_operation_button">微信收款二维码</view>
          <view class="image_operation_button">支付宝收款二维码</view>
          <view class="image_operation_button">上传店铺logo图片</view>
          <view class="image_operation_button">上传店铺二维码</view>
          <view class="clear"></view>
        </view>
        <view class="print_info">银行信息</view>
        <view class="dictionary_input">
          <view class="dictionary_input_text1">姓名：</view>
          <input type="text" class="dictionary_input1" />
          <view class="clear"></view>
        </view>
        <view class="dictionary_input">
          <view class="dictionary_input_text1">开户银行：</view>
          <input type="text" class="dictionary_input1" />
          <view class="clear"></view>
        </view>
        <view class="dictionary_input">
          <view class="dictionary_input_text1">银行账号：</view>
          <input type="number" class="dictionary_input1" />
          <view class="clear"></view>
        </view>
      </scroll-view>
      <button class="submit">保存</button>
    </swiper-item>

    <!--高级设置-->
    <swiper-item>
      <scroll-view scroll-y>
        <!--高级设置//支付管理,付款方式-->
        <view class="setting_view" style="padding: 0 20px;">
          <view class="setting_title">支付管理</view>
          <view class="setting_title" style="font-size:16px;">添加手机支付二维码</view>
          <view class="setting_operation">
            <text>1.</text>微信支付(二维码)
            <image src="../../../../images/update.png" mode="aspectFit" class="image_update" />
          </view>
          <view class="setting_operation">
            <text>2.</text>支付宝支付(二维码)
            <image src="../../../../images/update.png" mode="aspectFit" class="image_update" />
          </view>
          <view class="setting_pay">
            <view class="pay_title">
              付款方式
              <image src="../../../../images/add.png" mode="aspectFit" class="image_add" />
            </view>
            <view class="pay_view">
              <text>1.</text>现金
              <image src="../../../../images/delete.png" mode="aspectFit" class="image_delete" />
            </view>
            <view class="pay_view">
              <text>2.</text>刷卡
              <image src="../../../../images/delete.png" mode="aspectFit" class="image_delete" />
            </view>
            <view class="pay_view">
              <text>3.</text>微信
              <image src="../../../../images/delete.png" mode="aspectFit" class="image_delete" />
            </view>
            <view class="pay_view">
              <text>4.</text>支付宝
              <image src="../../../../images/delete.png" mode="aspectFit" class="image_delete" />
            </view>
            <view class="pay_view">
              <text>5.</text>转账
              <image src="../../../../images/delete.png" mode="aspectFit" class="image_delete" />
            </view>
          </view>
        </view>

        <!--高级设置//货品售价生成方式-->
        <view class="setting_view">
          <view class="setting_title2">货品售价生成方式</view>
          <view class="setting_button_view">
            <view class="setting_button">
              <view class="setting_button_small"></view>
              <view class="setting_button_text1">成本价*毛利率</view>
              <view class="setting_button_text2">吊牌价*折扣率</view>
            </view>
          </view>
          <view class="clear"></view>
          <view class="setting_name2">成本价*毛利率</view>
          <view class="setting_text2">此种方式适合批发店，新增货品时按成本价和客户种类的毛利率计算出固定的销售价格</view>
          <view class="setting_name2">成本价*毛利率</view>
          <view class="setting_text2">此种方式适合零售店，在货品销售时，按吊牌价和客户种类的折扣率生成销售价格</view>
        </view>

        <!--货品级别-->
        <view class="print_info" style="border-bottom:1px solid #52CAC1;">
          <navigator url="../goodsLevel/goodsLevel" class="goods_update">修改</navigator>
          货品级别
        </view>
        <view class="goods_level">
          <view class="goods_level_title" style="width:25%">货品名称</view>
          <view class="goods_level_title" style="width:15%"></view>
          <view class="goods_level_title" style="width:35%">客户种类</view>
          <view class="goods_level_title" style="width:25%">折扣率</view>
          <picker-view indicator-style="height: 30px;" class="goods_level_picker"  bindchange="bindChange">
            <picker-view-column>
              <view wx:for="{{goods_level}}" class="picker_text">{{item.value}}</view>
            </picker-view-column>
          </picker-view>
          <image src="" class="goods_level_image" />
          <view class="goods_level_text" style="width:35%;">
            <view wx:for="{{goods_level2}}" class="goods_level_view">{{item.value}}</view>
          </view>
          <view class="goods_level_text" style="width:25%;">
            <view wx:for="{{goods_level3}}" class="goods_level_view">{{item.value}}</view>
          </view>
          <view class="clear"></view>
        </view>

        <view class="setting_view">
          <view class="setting_title" style="margin-bottom:10px;">客户种类</view>
          <view class="setting_title3">
            <view class="setting_text">客户名称</view>
            <view class="setting_text">可见货品级别</view>
            <view class="setting_text">编辑</view>
            <view class="clear"></view>
          </view>
          <view class="setting_content">
            <view class="setting_text">种类一</view>
            <view class="setting_text">普通</view>
            <navigator url="../customerType/customerType" class="setting_text">修改</navigator>
            <view class="clear"></view>
          </view>
          <view class="setting_content">
            <view class="setting_text">种类二</view>
            <view class="setting_text">会员</view>
            <navigator url="../customerType/customerType" class="setting_text">修改</navigator>
            <view class="clear"></view>
          </view>
          <view class="setting_content">
            <view class="setting_text">种类三</view>
            <view class="setting_text">高级会员</view>
            <navigator url="../customerType/customerType" class="setting_text">修改</navigator>
            <view class="clear"></view>
          </view>
        </view>
        <navigator url="../notecase/notecase" class="notecase">
          <image src="../../../../images/notecase.png" mode="aspectFit" class="notecase_image" />
          <view class="notecase_text">钱包管理</view>
        </navigator>
      </scroll-view>
      <button class="submit">保存</button>
    </swiper-item>
  </swiper>
</view>

