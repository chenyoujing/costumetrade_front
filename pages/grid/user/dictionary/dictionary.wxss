/* pages/my/Goods/Goods.wxss */
/*头部*/
@import "../../../../css/title.wxss";


.dictionary{
  width: 100%;
}
.dictionary_text{
  text-align: center;
  background-color: #E3E3E3;
  float: left;
  font-size: 16px;
  line-height: 40px;
}
.dictionary_text{
  width: 25%;
}
.image_down{
  width: 10px;
  height: 10px;
  transform:rotate(-90deg);
  transition: all 0.3s;
}
.active{
  background: #ffffff;
}
.active .image_down{
  transform: rotate(0);
}
.content{
   box-sizing:border-box;
}
swiper{
  position: absolute;
  top: 80px;
  left: 0;
  right: 0;
  bottom: 0;
  height: auto;
}

.staff{
  position: relative;
}
.bg-1{
  background-color: #DBF4F1;
}
.staff_tx{
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin: 10px;
  margin-right: 0;
}
.staff_info{
  position: absolute;
  top: 0;
  left: 70px;
  right: 40px;
}
.staff_info_name,.staff_info_num,.staff_info_state{
  margin: 10px;
  float: left;
  font-size: 14px;
}
.staff_modify{
  width: 15px;
  height: 15px;
  position: absolute;
  top: 15px;
  right: 15px;
}
.staff_updata{
  position: absolute;
  top: 0;
  background-color: #ffffff;
  transition: all 0.3s
}
.staff_updata_top{
  padding: 10px 0;
  border-bottom: 10px solid #DBF4F1;
}
.checkbox{
  width: 50%;
  float: left;
  text-align: center;
  padding: 10px 0;
  font-size: 16px;
}
scroll-view{
  position: absolute;
  top: 0;
  bottom: 40px;
}
.print_info{
  padding: 20px 0 10px;
  margin: 0 20px;
  font-size: 18px;
  line-height: 20px;
  position: relative;
}
.dictionary_input{
  padding-right: 30px;
  margin-bottom: 10px;
}
.dictionary_input_text1{
  width: 30%;
  float: left;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
}
.dictionary_input_text2{
  width: 60%;
  float: left;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
}
.dictionary_input1{
  border: 1px solid #52CAC1;
  font-size: 14px;
  padding-left: 7px; 
  height: 28px;
}
.dictionary_input radio-group{
  float: left;
  width: 40%;
}
.dictionary_input .radio{
  float: left;
  width: 50%;
  font-size: 16px;
}
.dictionary_input .radio radio{
  zoom: 80%;
}
.image_operation{
  margin: 0 20px;
}
.image_operation_button{
  box-sizing: border-box;
  width: 49%;
  margin: 0.1%;
  border: 1px solid #52CAC1;
  float: left;
  font-size: 16px;
  line-height: 30px;
  text-align: center;
}
.add{
  float: right;
}
.add_image{
  width: 15px;
  height: 15px;
  padding: 0 5px;
}
.add::after{
  content: "新增";
  font-size: 14px;
  line-height: 24px;
}
.delete{
  float: right;
}
.delete_image{
  width: 15px;
  height: 15px;
  padding: 0 5px;
}
.delete::after{
  content: "删除";
  font-size: 14px;
  line-height: 24px;
}
.submit{
  font-size: 18px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 40px;
  height: 40px;
  text-align: center;
  padding: 0;
  position: absolute;
  width: 40%;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  color: #ffffff;
  transition: all 0.3s;
}



.setting_view{
  background-color: #DBF4F1;
  margin: 10px 20px;
  position: relative;
}
.setting_title{
  font-size: 18px;
  line-height: 30px;
  padding-left: 10px;
  position: relative;
}
.setting_operation{
  font-size: 16px;
  line-height: 40px;
  position: relative;
  padding-right: 40px;
}
.setting_operation text{
  padding: 0 20px;
}
.image_update{
  width: 16px;
  height: 16px;
  padding: 12px;
  position: absolute;
  top: 0;
  right: 0;
}
.setting_pay{
  border-top: 1px solid #52CAC1;
}
.pay_title{
  font-size: 16px;
  line-height: 40px;
  position: relative;
  padding-left: 10px;
}
.image_add{
  width: 16px;
  height: 16px;
  padding: 12px;
  position: absolute;
  top: 0;
  right: 0;
}
.pay_view{
  font-size: 16px;
  line-height: 30px;
  position: relative;
  padding-right: 30px;
}
.pay_view text{
  padding: 0 20px;
}
.image_delete{
  width: 16px;
  height: 16px;
  padding: 7px;
  position: absolute;
  top: 0;
  right: 5px;
}



.setting_title2{
  float: left;
  width: 40%;
  text-align: center;
  font-size: 32rpx;
  line-height: 36px;
}
.setting_button_view{
  float: left;
  width: 60%;
  height: 36px;
  position: relative;
  font-size: 12px;
}
.setting_button{
  box-sizing: border-box;
  width: 100%;
  max-width: 190px;
  background-color: #DCDCDC;
  height: 26px;
  border-radius: 13px;
  border: 1px solid #DCDCDC;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.setting_button_small{
  width: 50%;
  background-color: #ffffff;
  height: 24px;
  border-radius: 12px;
}
.setting_button_text1{
  position: absolute;
  top: 0;
  left: 0;
  right: 50%;
  line-height: 24px;
  font-size: 12px;
  text-align: center;
}
.setting_button_text2{
  position: absolute;
  top: 0;
  left: 50%;
  right: 0;
  line-height: 24px;
  font-size: 12px;
  text-align: center;
}


.goods_update{
  color: #286561;
  padding: 0 10px;
  font-size: 16px;
  line-height: 20px;
  float: right;
}
.goods_level{
  padding: 0 20px;
  margin-bottom: 45px;
}
.goods_level_title{
  float: left;
  font-size: 14px;
  text-align: center;
  height: 30px;
  line-height: 30px;
}
.goods_level_picker{
  float: left;
  height: 150px;
  width: 25%;
  background-color: #EEEEEE;
}
.picker_text{
  line-height: 30px;
  font-size: 14px;
  text-align: center;
}
.goods_level_image{
  box-sizing: border-box;
  float: left;
  width: 15%;
  padding: 4%;
