}
.goods_level_text{
  box-sizing: border-box;
  float: left;
  height: 150px;
}
.goods_level_view{
  box-sizing: border-box;
  border: 1px solid #ffffff;
  background-color: #DBF4F1;
  font-size: 14px;
  line-height: 28px;
  text-align: center;
}

.setting_title3{
  padding:5px 0;
  margin:0 10px;
  border-bottom: 1px solid #52CAC1;
}
.setting_text{
  width: 33.33333333%;
  text-align: center;
  float: left;
  font-size: 14px;
}
.setting_content{
  padding: 5px 0;
  margin: 0 10px;
}
.setting_name2{
  font-size: 14px;
  line-height: 20px;
