.info_scroll{
  position: absolute;
  top: 0;
  bottom: 0;
  z-index: 0;
}

.info_swiper{
  height: 180px;
}
.info_swiper_image{
  height: 180px;
  width: 100%;
}

/*导航栏*/
.info_nav{
  background-color: #ffffff;
  width: 100%;
  top:0;
  z-index: 99;
}
.nav_view{
  width: 33.33333333%;
  float: left;
  text-align: center;
  z-index: 1
}
.nav_view image{
  width: 100%;
  height: 20px;
  padding: 5px 0;
  display: block;
  margin: auto;
}
.nav_view_text{
  font-size: 12px;
  line-height: 20px;
}

/*信息*/
.info_container{
  padding: 15px 15px 10px;
  border-bottom: 2px solid #DCDCDC;
}
.info_tx{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  display: block;
  float: left;
  position: relative;
}
.prompt{
  top: 1px;
  left: unset;
  right: 4px;
}
.info_content{
  float: left;
  margin-left: 15px;
}
.info_name{
  font-size: 20px;
  line-height: 20px;
  padding-bottom: 18px;
}
.info_text{
  font-size: 12px;
  line-height: 12px;
}
.info_time{
  float: right;
  font-size: 11px;
  line-height: 20px;
  color: #cccccc;
}

/*通讯录*/
.unitSelect_sceoll{
  box-sizing: border-box;
  height: 100vh;
  position: relative;
}
.supplier_container{
  height: 48px;
  border-bottom: 2px solid #DBF4F1;
}
.supplier_tx{
  float: left;
  width: 20%;
}
.supplier_tx image{
  display: block;
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin: 10px auto;
}
.supplier_name{
  float: left;
  font-size: 18px;
  line-height: 48px;
  width: 40%;
}
.supplier_info{
  float: left;
  width: 35%;
  font-size: 10px;
  line-height: 14px;
  text-align: center;
  padding: 10px 0;
}


.nav_right{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 5%;
}
.nav_text{
  height: 3.57142857%;
  text-align: center;
  font-size: 10px;
}

/*公告*/
.notice{
  padding: 15px 10px 0;
}
.notice:last-child{
  padding-bottom: 15px;
}
.notice_view{
  box-shadow: 1px 1px 4px #000000;
}
.notice_title{
  padding: 10px 20px;
  border-bottom: 2px solid #DCF5F3;
}
.notice_tx{
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 20px;
  float: left;
}
.notice_name{
  font-size: 15px;
  line-height: 20px;
  height: 40px;
  display: table-cell;
  vertical-align: middle;
}
.notice_text{
  font-size: 18px;
  line-height: 40px;
  height: 40px;
  float: right;
}
.notice_content{
  padding: 10px 20px;
  position: relative;
}
.notice_content_text{
  font-size: 13px;
  line-height: 18px;
  padding-bottom: 10px;
}
.notice_picture{
  width: 33.33333333%;
  height: 190rpx;
  float: left;
  position: relative;
}
.notice_picture image{
  width: 190rpx;
  height: 190rpx;
  display:block;
  margin: auto;
}
.notice_video video{
  width: auto;
  height: auto;
  margin-top: 10px;
}

