/*头部*/
@import "../../../../css/title.wxss";

.orderSure_userinfo{
  border: 1px solid #286561;
  text-align: center;
  font-size: 14px;
  line-height: 24px;
  height: 48px;
  padding: 0 10px;
  position: relative;
}
.userinfo_text text{
  line-height: 24px;
  padding: 0 10px;
}
.userinfo_update{
  width: 12px;
  height: 12px;
  padding: 9px;
  position: absolute;
  top: -2px;
  right: 5px;
}

.orderSure_container{
  position: absolute;
  top: 100px;
  bottom: 50px;
}
.content{
  padding: 0 20px 10px;
}
.content:first-child{
  padding-top: 10px;
}
.content_left{
  box-sizing: border-box;
  float: left;
  border-right: 2px solid #ffffff;
  width: 65%;
  padding: 0 40rpx;
}
.content_right{
  float: left;
  width: 35%;
  height: 100%;
}
.bg1 .content_left,.bg1 .content_right{
  background-color: #DCDCDC;
}
.bg2 .content_left,.bg2 .content_right{
  background-color: #BBDBD8;
}
.order_name{
  font-size: 16px;
  line-height: 20px;
  padding: 15px 0;
}
.order_info{
  font-size: 12px;
  line-height: 20px;
  padding-bottom: 15px;
}
.order_price{
  font-size: 18px;
  line-height: 20px;
  padding: 15px 0;
  color: #ff0000;
  text-align: center;
}
.order_num{
  font-size: 12px;
  line-height: 20px;
  padding-bottom: 15px;
  text-align: center;
}

.orderSure_bottom{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
}
.bottom_info{
  border: 1px solid #B9CDCB;
  height: 48px;
  margin-right: 100px;
}
.bottom_num{
  float: left;
  font-size: 12px;
  color: #8C8C8C;
  width: 35%;
  height: 48px;
  line-height: 48px;
  text-align: center;
}
.bottom_price{
  color: #ff0000;
  font-size: 16px;
  width: 65%;
  height: 48px;
  line-height: 20px;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
}
.bottom_price::before{
  content: "总金额:";
  color: #000000;
}
.bottom_button{
  background-color: #FE2D04;
  color: #ffffff;
  float: right;
  font-size: 20px;
  line-height: 50px;
  height: 50px;
  width: 100px;
  text-align: center;
}