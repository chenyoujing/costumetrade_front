/*头部*/
@import "../../../../css/title.wxss";

.orderSure_userinfo{
  text-align: center;
  font-size: 14px;
  line-height: 24px;
  height: 50px;
  padding-right: 40px;
  background-color: #eeeeee;
  position: relative;
}
.userinfo_text text{
  line-height: 24px;
  padding: 0 10px;
}
.userinfo_update{
  width: 16px;
  height: 16px;
  padding: 17px 12px;
  position: absolute;
  top: 0;
  right: 0;
}

.orderSure_scroll{
  position: absolute;
  top: 90px;
  bottom: 60px;
}
.orderSure_container{
  padding: 10px;
  box-sizing:border-box;
  width: 100%;
}
.content_container{
  box-shadow: 1px 1px 4px #000000;
  position: relative;
  border-radius: 3px;
  margin-bottom: 10px;
}
.content_container > image{
  width: 115px;
  height: 115px;
  float: left;
}
.content_container_text{
  position: absolute;
  top: 0;
  left: 115px;
  right: 0;
  bottom: 0;
  padding: 5px;
}
.content_container_text > image{
  width: 20px;
  height: 20px;
  float: right;
}
.content_container_title{
  font-size: 17px;
  line-height: 20px;
  padding: 5px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.content_container_info{
  border-top: 2px solid #eeeeee;
}
.info_text{
  color: #666666;
  font-size: 12px;
  line-height: 18px;
  padding: 5px 0 10px;
}
.info_text text{
  padding: 0 5px;
  
}
.price{
  color: #FE2D04;
  font-size: 20px;
  line-height: 40px;
  float: left;
 }
.price::before{
  content: "￥"
}
.info_other{
  float: right;
}
.num{
  font-size: 16px;
  line-height: 24px;
  text-align: right;
  color: #666666;
}
.num::before{
  content: "数量："
}
.date{
  font-size: 12px;
  line-height: 16px;
  text-align: right;
  color: #666666;
}

.orderinfo{
  background-color: #eeeeee;
  margin: 10px;
  padding: 10px;
}
.orderinfo_title{
  border-bottom: 2px solid #DDDDDD;
  margin-bottom: 5px;
}
.orderinfo_text{
  padding: 5px;
  font-size: 14px;
  line-height: 30px;
}
.orderinfo_text_image{
  width: 12px;
  height: 12px;
  padding: 9px 0;
  padding-left: 5px; 
  float: right;
}
.orderinfo_footer{
  border-top: 2px solid #DDDDDD;
  margin-top: 5px;
}
.orderinfo_footer_text::before{
  content: "实付金额：";
  color: #000000;
}
.orderinfo_footer_text{
  color: #FE2D04;
  padding: 5px;
  font-size: 17px;
  line-height: 30px;
}

.sure_button{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 40px;
  margin: 10px;
  border-radius: 5px;
  background-color: #52CAC1;
  font-size: 18px;
  line-height: 40px;
  text-align: center;
  color: #ffffff;
}
/*底部浮动*/
.orderSure_bottom{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
}
.bottom_info{
  border: 1px solid #B9CDCB;
  height: 48px;
  margin-right: 100px;
}
.bottom_num{
  float: left;
  font-size: 12px;
  color: #8C8C8C;
  width: 35%;
  height: 48px;
  line-height: 48px;
  text-align: center;
}
.bottom_price{
  color: #ff0000;
  font-size: 16px;
  width: 65%;
  height: 48px;
  line-height: 20px;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
}
.bottom_price::before{
  content: "总金额:";
  color: #000000;
}
.bottom_button{
  background-color: #FE2D04;
  color: #ffffff;
  float: right;
  font-size: 20px;
  line-height: 50px;
  height: 50px;
  width: 100px;
  text-align: center;
}

/*选快递*/
modal{
  min-height: 200px;
}
.choose_container{
  margin: 0 -20px;
  padding: 20px 0;
}
.logistics_choose{
  text-align: center;
  margin: 10px 20px;
}
.choose_view{
  background-color: #DCDCDC;
  color: #000000;
  font-size: 16px;
  line-height: 40px;
  padding: 0 8px;
  width: auto;
}