.shoppingcard_container{
  padding: 10px 20px;
}

.shoppingcard_bottom{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
}
.bottom_info{
  border: 1px solid #286561;
  height: 48px;
  margin-right: 100px;
}
.bottom_button{
  background-color: #FE2D04;
  color: #ffffff;
  float: right;
  font-size: 20px;
  line-height: 50px;
  height: 50px;
  width: 100px;
  text-align: center;
}