<!--商城头部-->
<view class="shop_title" bindtap="aaa">
  <image src="../../../images/head-portrait.png" mode="aspectFill" class="shop_title_image" />
  <view class="name">NICK</view>
  <image src="../../../images/image_none.png" mode="aspectFill" class="tx" />
  <image src="../../../images/order-form.png" mode="aspectFit" class="shop_title_image" >
    <view class="prompt">3</view>
  </image>
  <image src="../../../images/message.png" mode="aspectFit" class="shop_title_image" >
    <view class="prompt" style="left:10px;">3</view>
  </image>
  <image src="../../../images/notice.png" mode="aspectFit" class="shop_title_image" >
    <view class="prompt">3</view>
  </image>
  <view class="clear"></view>
</view>


<scroll-view scroll-y class="shop_scroll">
  <!--轮播图-->
  <swiper indicator-dots autoplay circular class="shop_swiper">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item ? item : '../../../images/image_none.png'}}" class="shop_swiper_image" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>

  <!--店铺-->
  <view class="shop_content">
    <view url="mall/mall" class="shop_content_view">
      <navigator url="storeDetails/storeDetails" class="shop_content_title">
        <image src="../../../images/image_none.png" mode="aspectFill" class="shop_content_tx" />
        <view class="shop_content_info">
          <view class="shop_content_name">向日宠物</view>
          <view class="shop_content_address">
            <image src="../../../images/site.png" mode="aspectFit" class="shop_address_image" />
            地址：杭州市萧山区建设一路裘皮城2楼
          </view>
        </view>
        <view class="clear"></view>
      </navigator>
      <navigator url="mall/mall" class="shop_goods">
        <view class="shop_picture">
          <image src="../../../images/image_none.png" mode="aspectFill"></image>
        </view>
        <view class="shop_picture">
          <image src="../../../images/image_none.png" mode="aspectFill"></image>
        </view>
        <view class="shop_picture">
          <image src="../../../images/image_none.png" mode="aspectFill"></image>
        </view>
        <view class="clear"></view>
      </navigator>
    </view>
    <image src="../../../images/custom-service.png" mode="aspectFit" class="shop_content_service" />
  </view>

  <view class="shop_content">
    <view url="mall/mall" class="shop_content_view">
      <view class="shop_content_title">
        <image src="../../../images/image_none.png" mode="aspectFill" class="shop_content_tx" />
        <view class="shop_content_info">
          <view class="shop_content_name">向日宠物</view>
          <view class="shop_content_address">
            <image src="../../../images/site.png" mode="aspectFit" class="shop_address_image" />
            地址：杭州市萧山区建设一路裘皮城2楼
          </view>
        </view>
        <view class="clear"></view>
      </view>
      <navigator url="mall/mall">
        <view class="shop_picture">
          <image src="../../../images/image_none.png" mode="aspectFill"></image>
        </view>
        <view class="shop_picture">
          <image src="../../../images/image_none.png" mode="aspectFill"></image>
        </view>
        <view class="shop_picture">
          <image src="../../../images/image_none.png" mode="aspectFill"></image>
        </view>
        <view class="clear"></view>
      </navigator>
    </view>
    <image src="../../../images/custom-service.png" mode="aspectFit" class="shop_content_service" />
  </view>
</scroll-view>
