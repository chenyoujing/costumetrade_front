  <view class="ordertype_text {{ordertype=='1' ? 'ordertype_active' : ''}}" bindtap="ordertype" data-ordertype="1">销售</view>
  <view class="clear"></view>
</view>

<!--二级分类 采购-->
<view class="ordertype2" wx-if="{{ordertype==0}}">
