      待发货<view class="ordertype2_prompt">3</view>
  </view>
  <view class="ordertype2_text {{ordertype2=='3' ? 'ordertype2_active' : ''}}" bindtap="ordertype2" data-ordertypetwo="3">
      确认收货<view class="ordertype2_prompt">3</view>
  </view>
  <view class="ordertype2_text {{ordertype2=='5' ? 'ordertype2_active' : ''}}" bindtap="ordertype2" data-ordertypetwo="5">
      全部
  </view>
  <view class="clear"></view>
</view>

