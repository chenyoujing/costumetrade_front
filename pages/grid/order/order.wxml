<!--订单头部-->
<view class="order_title">
  <image src="../../../images/head-portrait.png" mode="aspectFill" class="order_title_image" />
  <view class="name">NICK</view>
  <image src="../../../images/image_none.png" mode="aspectFill" class="tx" />
  <image src="../../../images/order-form.png" mode="aspectFit" class="order_title_image" >
    <view class="prompt">3</view>
  </image>
  <image src="../../../images/message.png" mode="aspectFit" class="order_title_image" >
    <view class="prompt" style="left:10px;">3</view>
  </image>
  <image src="../../../images/notice.png" mode="aspectFit" class="order_title_image" style="margin-left:10px;" >
    <view class="prompt">3</view>
  </image>
  <image mode="aspectFit" src="../../../images/search.png" class="search_image" />
  <input type="number" class="order_title_input" placeholder="单号查询..." />
  <view class="clear"></view>
</view>

<!--订单类型分类-->
<view class="ordertype">
