<!--确定订单-->
<view class="order" style="top:{{order}}; bottom:-{{order}};">
  <view class="order_title">确认订单</view>
  <view class="order_close" bindtap="close">×</view>
  <form class="order_content" bindsubmit="order_submit" data-clientid="{{clientid}}">
    <scroll-view scroll-y="true">
      <view class="order_info">
        <view class="info_title">订单详情</view>
        <view class="order_info_content">
          <view class="price_total">{{totalData.realcostArray}}</view>
          <view class="price_amount">{{totalData.realcostArray}}</view>
          <view class="price_unpaid">{{debet}}</view>
          <view class="clear"></view>
        </view>
      </view>
      <view class="pay_info">
        <view class="info_title">付款信息</view>
        <view class="pay_info_content">
          <view class="order_input">
            <view class="order_input_text">折扣：</view>
            <input type="number" class="order_input1" name="handcount" placeholder="请输入折扣1-100" />
            <view class="clear"></view>
          </view>
          <view class="order_input">
            <view class="order_input_text">去零：</view>
            <input type="number" class="order_input1" name="handcount" placeholder="请输入金额" />
            <view class="clear"></view>
          </view>
          <view class="order_input">
            <view class="order_input_text">现金：</view>
            <button class="order_input_button">清零</button>
            <input type="digit" class="order_input2" name="name" />
            <view class="clear"></view>
          </view>
          <view class="order_input">
            <view class="order_input_text">刷卡：</view>
            <button class="order_input_button">清零</button>
            <input type="digit" class="order_input2" name="name" />
            <view class="clear"></view>
          </view>
        </view>
      </view>
      <view class="bill">
        <view class="info_title">账单操作</view>
        <view class="bill_content">
          <view class="bill_content_button" bindtap="bill_wechat">微信账单</view>
          <view class="bill_content_button" bindtap="bill_print">打印账单</view>
          <view style="float:left; width:100%;">
            <view class="order_input_text">单据时间：</view>
            <picker style="margin-right:0;" mode="date" value="{{date}}"start="1970-1-1" bindchange="date" name="date">
              {{date}}
            </picker>
            <view class="clear"></view>
          </view>
          <view class="clear"></view>
        </view>
      </view>
    </scroll-view>
    <view class="order_footer" style="position:absolute;">
      <view class="all_number">1</view>
      <view class="all_price">232.00</view>
      <view class="all_button" bindtap="order">提交订单 </view>
      <view class="clear"></view>
    </view>
  </form>
</view>


<!--打印账单-->
<view class="modal_cover" bindtap="bill_modal_close" animation="{{bill_modal_opacity}}" style="display:{{bill_modal}};"></view>
<view class="modal" animation="{{bill_modal_opacity}}" style="display:{{bill_modal}};">
  <view class="modal_header">
    <view class="modal_header_title">打印账单</view>
    <view class="modal_header_content">请输入打印机的设备编号(双击设备出来设备编号)</view>
  </view>
  <view class="modal_close" bindtap="bill_modal_close">×</view>

  <scroll-view scroll-y="true" class="modal_content">
    <view class="bill_number">
      <view class="order_input_text">编号：</view>
      <input type="number" class="order_input1" name="handcount" placeholder="请输入金额" />
    </view>
  </scroll-view>
  <view class="bill_close" bindtap="bill_modal_close">取消</view>
  <view class="bill_submit">确定</view>
</view>

<!--微信账单-->
<view class="modal_cover" bindtap="wechat_modal_close" animation="{{wechat_modal_opacity}}" style="display:{{wechat_modal}};"></view>
<view class="modal" animation="{{wechat_modal_opacity}}" style="display:{{wechat_modal}}; top:20%;bottom: unset; height:auto; padding-bottom:50px;">
  <view class="wechat_header">请扫码</view>
  <view class="modal_close" bindtap="wechat_modal_close" style="color:#000000;">×</view>
  <image src="../../../../images/image_none.png" mode="widthFix" style="width:50%;margin: 20px 25%;"></image>
  <view class="wechat_button">
    <view class="wechat_submit">扫好了，发账单</view>
    <view class="wechat_close" bindtap="wechat_modal_close">取消</view>
  </view>
</view>