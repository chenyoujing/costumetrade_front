    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">5</view>
    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">6</view>
    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">-</view>
    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">7</view>
    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">8</view>
    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">9</view>
    <view class="keyboard_view" style="width:{{keyboard_width}}px;height:{{keyboard_width}}px;line-height:{{keyboard_width}}px;">0</view>
    <view class="clear:both;"></view>
  </view>
</view>