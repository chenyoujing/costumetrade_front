  <!--头部-->
<view class="unitSelect_title">
  <view class="title_text">{{title}}</view>
  <input type="text" class="title_input" />
  <image src="../../../../images/search.png" class="title_search" mode="aspectFit" />
  <image src="../../../../images/add.png" class="title_add" mode="aspectFit" />
  <view class="claer"></view>
</view>

<scroll-view scroll-y class="unitSelect_sceoll" scroll-into-view="{{supplier_type}}">
  <!--供应商内容-->
  <block wx:for="{{contacts}}">
    <view class="supplier_type" id="{{item.type}}">{{item.type}}</view>
    <view class="supplier_container" wx:for="{{item.value}}">
      <view class="supplier_tx" data-id="{{item.id}}" data-cate="{{item.cate}}" data-image="{{item.image}}" data-name = "{{item.remarkName}},{{item.reallyName}},{{item.nickName}}" bindtap="selectName">
        <image src="{{item.image?item.image:'../../../../images/image_none.png'}}" mode="aspectFill"></image>
      </view>
      <view class="supplier_name"></view>
      <view class="supplier_info">
        <view wx:if="{{item.remarkName}}">名称：{{item.remarkName}}</view>
        <view wx:if="{{!item.remarkName && item.reallyName}}">名称：{{item.reallyName}}</view>
        <view wx:if="{{!item.remarkName && !item.reallyName && item.nickName}}">名称：{{item.nickName}}</view>
        <view>电话：{{item.telephone}}</view>
      </view>
    </view>  
  </block>

  <!--右边的导航栏-->
</scroll-view>
  <view class="nav_right" bindtap="supplier_select">
    <view wx:for="{{nav_right}}" class="nav_text" data-type="{{item}}">{{item}}</view>
  </view>
