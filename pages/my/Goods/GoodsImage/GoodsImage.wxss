.modal2{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: #ffffff;
  z-index: 99;
}
.modal_header{
  font-size: 16px;
  line-height: 24px;
  padding: 8px;
  text-align: center;
  background-color: #52CAC1;
  color: #ffffff;
}
.image_close{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  padding: 12px 10px;
}
.search{
  position: relative;
}
.title_input{
  margin-right: 15%;
  margin-left: 15%; 
  border: 1px solid #52CAC1;
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 4px 10px;
  font-size: 14px;
  height:27px;
  min-height:27px;
}
.image_search{
  position: absolute;
  top: 0;
  right: 15%;
  bottom: 0;
  margin: auto;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 10px;
}

.image_content{
  padding: 10px;
}
.image_container{
  width: 33.33333333%;
  float: left;
  text-align: center;
  padding: 10px 0;
  display: block;
  position: relative;
}
.image_container_image{
  width: 100px;
  height: 100px;
  border: 1px solid #52CAC1;
  display: block;
  margin: 0 auto;
}
.image_bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 70px !important;
  height: 70px !important;
  margin: auto;
}
.image_submit{
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 40px;
  text-align: center;
  padding: 0;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  color: #ffffff;
}