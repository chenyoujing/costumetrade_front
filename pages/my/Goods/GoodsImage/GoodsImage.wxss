.modal2{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: #ffffff;
  z-index: 99;
}
.modal_header{
  font-size: 16px;
  line-height: 24px;
  padding: 8px;
  text-align: center;
}
.image_close{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  padding: 12px 10px;
}
.search{
  position: relative;
}
.title_input{
  margin-right: 15%;
  margin-left: 15%; 
  border: 1px solid #52CAC1;
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 4px 10px;
  font-size: 14px;
  height:27px;
  min-height:27px;
}
.image_search{
  position: absolute;
  top: 0;
  right: 15%;
  bottom: 0;
  margin: auto;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 10px;
}

