<!--条码编辑-->
<view class="modal2" animation="{{brand_modal_opacity}}" style="display:{{brand_modal}};">
  <view class="modal_header">条码编辑</view>
  <image src="../../../images/close.png" mode="aspectFit" class="image_close" />
  <view class="modal2_title">
    <view class="modal2_titleText">
      <view class="modal2_title_text">条码</view>
    </view>
    <view class="modal2_titleInput">
      <input type="text" class="modal2_title_input" name="" />
    </view>
    <view class="modal2_titleButton">
      <image class="image_scan" src="../../../images/scan.png" mode="aspectFit" />
    </view>
    <view class="clear"></view>
  </view>
  <scroll-view scroll-y="true" class="modal2_content">
    <view class="color_title">
      <view class="color_title_text">进货价:</view>
      <input type="number" class="color_input" name="packprice" value="{{updata_packprice}}" />
      <view class="clear"></view>
    </view>
    <radio-group bindchange="brand_radio">
      <label class="modal2_content_option" wx:for="{{screen_content2}}" wx:key="id">
        <radio value="{{item.id}}" />{{item.brandname}}
      </label>
    </radio-group>
    <image class="image_down2" src="../../../images/down2.png" mode="aspectFit"></image>
