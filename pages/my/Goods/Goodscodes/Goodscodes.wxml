      <view class="color_title_text">进货价:</view>
      <input type="number" class="color_input" name="packprice" value="{{updata_packprice}}" />
      <view class="clear"></view>
    </view>
    <radio-group bindchange="brand_radio">
      <label class="modal2_content_option" wx:for="{{screen_content2}}" wx:key="id">
        <radio value="{{item.id}}" />{{item.brandname}}
      </label>
    </radio-group>
    <image class="image_down2" src="../../../images/down2.png" mode="aspectFit"></image>
  </scroll-view>
</view>
