.title{
  background-color: #52CAC1;
  padding: 15px 20px;
  position: relative;
  z-index: 3;
}
.title_input{
  margin-right: 20%;
  margin-left: 2%; 
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 4px 10px;
  font-size: 14px;
  height:27px;
  min-height:27px;
}
.image_search,.image_add,.image_more{
  position: absolute;
  top: 0;
  right: 25%;
  bottom: 0;
  margin: auto;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 10px;
}
.image_add{
  right: 10%;
}
.image_more{
  right: 0%;
}
.title button{
  width: 50px;
  height: 50px;
  padding: 0;
}
.title button icon{
  left: 0;
  right: 0;
  padding: 15px;
}
button::after{
  content: none;
}
.condition{
  width: 100%;
  height: 30px;
  position: relative;
  z-index: 2;
}
.sort{
  position: absolute;
  left: 0;
  right: 0;
}
.sort_text,.more{
  text-align: center;
  background-color: #E3E3E3;
  float: left;
  font-size: 14px;
  line-height: 30px;
}
.sort_text{
  width: 30%;
}
.sort_text .image_down{
  width: 10px;
  height: 10px;
}
.screen_active .sort_up{
  transform:rotate(180deg);
}
.more{
  width: 10%;
}
.screen_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 2;
  opacity: 0;
}
.screen{
  position: absolute;
  left: 100%;
  right: -100%;
  transition: all 0.5s;
}
.screen_text,.back{
  text-align: center;
  background-color: #E3E3E3;
  float: left;
  font-size: 14px;
  line-height: 30px;
}
.screen_text{
  width: 23%;
}
.screen_text .image_down{
  width: 10px;
  height: 10px;
  transform:rotate(-90deg);
  transition: all 0.2s;
}
.screen_content{
  position: absolute;
  top: -270px;
  width: 100%;
  background-color: #ffffff;
  padding: 0 10px 54px;
  overflow: hidden;
  max-height: 300px;
  transition: all 0.5s;
  box-sizing: border-box;
}
.screen_checkbox{
  box-sizing: border-box;
  width: 50%;
  display:inline-block;
  font-size: 12px;
  padding: 5px;
}
.screen_checkbox > checkbox,.screen_checkbox > radio{
  font-size: 10px;
  margin-right: 12px;
}
.screen_active{
  background: #ffffff;
}
.screen_active .screen_image{
  transform:rotate(0deg);
}


.screen_reset,.screen_submit{
  display: inline-block;
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 50%;
  margin: auto;
  width: 100px;
  font-size: 16px;
  border-radius: 0;
  border: 2px solid #314440;
  background-color: transparent;
  line-height: 30px;
  text-align: center;
  padding: 0;
  color: #314440;
}
.screen_reset{
  left: 0;
  right: 50%;
}
.screen_submit{
  left: 50%;
  right: 0;
}
.back{
  width: 8%;
  position: relative;
  height: 30px;
}
.image_back{
  width: 16px;
  height: 16px;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.content{
  box-sizing: border-box;
  position: absolute;
  top: 95px;
  left: 0;
  right: 0;
  bottom: 0;
}
.content_container{
  box-shadow: 0.5px 0.5px 2px #000000;
  position: relative;
  border-radius: 3px;
}
.content_container > image{
  width: 115px;
  height: 115px;
  float: left;
}
.content_container_text{
  position: absolute;
  top: 0;
  left: 115px;
  right: 0;
  bottom: 0;
  padding: 5px;
}
.image_update{
  width: 16px;
  height: 16px;
  padding: 5px 10px;
  float: right;
}
.content_container_title{
  font-size: 14px;
  padding: 0 5px 10px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.content_container_info{
  border-top: 1px solid #000000;
  padding: 10px 5px 10px 0;
}
.price{
  color: #ff0000;
  font-size: 20px;
  line-height: 32px;
  float: left;
 }
.price::before{
  content: "￥"
}
.info_other{
  float: right;
}
.volume,.date{
  font-size: 12px;
  line-height: 16px;
  text-align: right;
}
.volume::before{
  content: "销量："
}
