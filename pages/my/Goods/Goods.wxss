}
.tr {
  display: inline-block;
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
  text-align: center;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.td {
  font-size: 12px;
  float: left;
  justify-content: center;
  text-align: center;
  height: 40px;
  line-height: 40px;
}
.th1{
  width: 10%;
  background: #eeeeee;
}
.th2{
  width: 20%;
  background: #ffffff;
}
.tr1{
  border-bottom: 1px solid #eeeeee; 
}
.th{
  font-size: 12px;
  justify-content: center;
  background-color: #52CAC1;
  color: #fff;
  display: inline-block;
  line-height: 40px;
  align-items: center;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.modal scroll-view{
  position: absolute;
  top: 80px;
  bottom: 40px;
}
.modal_submit{
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 40px;
  text-align: center;
  padding: 0;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  color: #ffffff;
}

/*货品详情*/
