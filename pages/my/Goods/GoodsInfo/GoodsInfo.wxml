
<!--货品详情-->
<view class="upload" style="top:{{upload}}; bottom:-{{upload}};">
  <view class="upload_title">{{title}}</view>
  <image src="../../../../images/amputate.png" mode="aspectFit" class="image_close" />
  <form class="upload_content" bindsubmit="submitGoodsInfo" data-id="{{id}}">
    <scroll-view scroll-y="true" class="upload_container">
      <view class="upload_input">
        <view class="upload_input_text">名称:</view>
        <input type="text" class="upload_input1" name="name" value="{{name}}" placeholder="*" placeholder-class="required" />
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">货号:</view>
        <input type="number" class="upload_input1" name="code"  value="{{code}}"/>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">品牌:</view>
        <picker bindchange="bindSelectorChange" data-style = 'brand_index' range="{{screen_brandList}}" value="{{brandid}}" range-key="brandname" name="brandid" mode="selector" >
            <text>{{screen_brandList[brand_index].brandname}}</text>
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">等级:</view>
        <picker style="margin-right:0" data-style = 'grade_index' bindchange="bindSelectorChange" value="{{grade}}" range="{{screen_gradeList}}" name="grade">
            {{screen_gradeList[grade_index]}}
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">吊牌价:</view>
        <input type="digit" class="upload_input1" name="tagprice" value="{{tagprice}}" placeholder="*" placeholder-class="required" />
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">进货价:</view>
        <input type="digit" class="upload_input1" name="purchaseprice" value="{{purchaseprice}}" />
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">销售价:</view>
        <checkbox-group class="picker_checkbox">
          <label>
            <checkbox value="{{item.name}}" checked="{{item.checked}}"/>手动修改销售价
          </label>
        </checkbox-group>
        <view class="clear"></view>
        <view class="picker_title">
          <view class="picker_content_view">客户种类</view>
          <view class="picker_content_view">销售价</view>
          <view class="picker_content_view">折扣率</view>
          <view class="picker_content_view">毛利率</view>
        </view>
        <picker-view class="picker_container" indicator-style="height: 33px;" value="{{value}}" bindchange="bindChange">
            <picker-view-column>
              <view class="picker_content" wx:for="{{picker_view}}">
                <view class="picker_content_view">{{item.name}}</view>
                <view class="picker_content_view">{{item.price}}</view>
                <view class="picker_content_view">{{item.discount}}</view>
                <view class="picker_content_view">{{item.profit}}</view>
              </view>
            </picker-view-column>
          </picker-view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">图片:</view>
        <scroll-view scroll-x="true" class="image_container">
          <view class="image_content"></view>
          <view class="image_content"></view>
          <view class="image_content"></view>
          <view class="image_content"></view>
          <view class="image_content"></view>
        </scroll-view>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">视频:</view>
        <scroll-view scroll-x="true" class="image_container">
          <view class="image_content"></view>
          <view class="image_content"></view>
          <view class="image_content"></view>
        </scroll-view>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">商品种类:</view>
        <picker bindchange="bindSelectorChange" data-style = 'producttype_index'  value="{{prducttype}}" name="prducttype" range="{{screen_productTypeList}}" range-key="catename">
            {{screen_productTypeList[producttype_index].catename}}
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">一手件数:</view>
        <input type="number" class="upload_input1" name="handcount" value="{{handcount}}" />
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">单位:</view>
        <picker bindchange="bindSelectorChange" range-key="unit" value="{{unit}}" range="{{screen_unitList}}" name="unit" data-style = 'unit_index'>
           {{unit}}
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">颜色:</view>
        <picker>
            1
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">尺码:</view>
          <picker bindchange="bindSelectorChange" range-key="value"  value="{{sizes}}" range="{{screen_productSize}}" name="sizes" data-style = 'size_index'>
            {{sizes}}
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">主条码:</view>
        <input type="number" class="upload_input2" name="barcode" value = "{{barcode}}" style="padding-right:30px;" />
        <image src="../../../../images/scan_black.png" mode="aspectFit" class="code_image" />
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">分条码:</view>
        <input type="number" class="upload_input2" name="barcodes" style="padding-right:30px;" />
        <navigator  url="../Goodscodes/Goodscodes" hover-class="navigator-hover">
        <image src="../../../../images/update.png" mode="aspectFit" class="update_image" />
        </navigator>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">年份:</view>
        <picker style="margin-right:0" mode="date" bindchange="year" end="{{year}}" name="year" fields="year">
        {{year}}
            <image src="../../../../images/down.png" mode="aspectFit" class="picker_image" />
        </picker>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_input_text">季节:</view>
        <radio-group class="radio-group" name="season">
          <label class="radio" wx:for="{{screen_content3}}" wx:key="id">
            <radio value="{{item.name}}" checked="{{season == item.value ? 'true' : ''}}"/>{{item.value}}
          </label>
        </radio-group>
        <view class="clear"></view>
      </view>
      <view class="upload_input">
        <view class="upload_date">
          <view class="upload_date_text">上架时间:</view>
            <picker style="margin-right:0;" mode="date" bindchange="bindDateChange" data-style = 'timeUp' value="{{timeUp}}" name="timeUp">
             <view class="picker">{{timeUp}}</view>
            </picker>
          <view class="clear"></view>
        </view>
        <view class="upload_date">
          <view class="upload_date_text">下架时间:</view>
            <picker style="margin-right:0;" data-style = 'timeDown' bindchange="bindDateChange" mode="date" name="timeDown" value="{{timeUp}}">
            <view class="picker"> {{timeDown}}</view>
            </picker>
          <view class="clear"></view>
        </view>
        <view class="clear"></view>
      </view>
    </scroll-view>
    <button class="submit" form-type="submit">提交</button>
  </form>
</view>




<!--添加图片-->
<view class="modal2_cover" bindtap="image_add_modal_close" animation="{{image_add_modal_opacity}}" style="display:{{image_add_modal}};"></view>
<view class="modal2" animation="{{image_add_modal_opacity}}" style="display:{{image_add_modal}};">
  <view class="modal_header">添加图片</view>
  <image src="../../../../images/close.png" mode="aspectFit" class="image_close" />
</view>

<!--搜索图片-->
<view class="modal2_cover" bindtap="image_search_modal_close" animation="{{image_search_modal_opacity}}" style="display:{{image_search_modal}};"></view>
<view class="modal2" animation="{{image_search_modal_opacity}}" style="display:{{image_search_modal}};">
  <view class="modal_header" style="border-bottom: 3px solid #DBF4F1;">搜索图片</view>
  <image src="../../../../images/close.png" mode="aspectFit" class="image_close" />
</view>

