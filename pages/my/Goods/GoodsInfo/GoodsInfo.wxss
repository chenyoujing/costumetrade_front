/*货品详情*/
.upload{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 9;
  transition: all 0.5s;
}
.upload_title{
  background-color: #52CAC1;
  font-size: 16px;
  line-height: 24px;
  padding: 8px;
  color: #ffffff;
  text-align: center;
}
.image_close{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  padding: 12px 10px;
}
.upload_container{
  position: absolute;
  top: 40px;
  bottom: 40px;
}
.upload_input{
  padding: 0 10px 10px;
  position: relative;
}
.upload_input:first-child{
  padding-top: 15px;
}
.upload_input_text{
  width: 20%;
  float: left;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
}
.upload_input1,.upload_input2{
  border: 1px solid #52CAC1;
  font-size: 14px;
  padding: 0 16px; 
  height: 28px;
}
.upload_input > picker{
  border: 1px solid #52CAC1;
  height: 28px;
  margin-left: 20%;
  width: auto;
  font-size: 14px;
  line-height: 28px;
  position: relative;
  padding-left: 16px;
  padding-right: 30px;
}
.picker_image,.code_image,.update_image{
  width: 10px;
  height: 10px;
  position: absolute;
  right: 10px;
  top: 0;
  bottom: 0;
  margin: auto;
}
.code_image{
  width: 16px;
  height: 16px;
  padding: 7px;
  bottom: unset;
}
.update_image{
  width: 12px;
  height: 12px;
  padding: 9px;
  bottom: unset;
}
.upload_date{
  width: 50%;
  float: left;
}
.upload_date_text{
  width: 50%;
  font-size: 13px;
  float: left;
  line-height: 30px;
  text-align: center;
}
.upload_date picker{
  border: 1px solid #52CAC1;
  height: 28px;
  margin-left: 50%;
  text-align: center;
  width: auto;
  font-size: 13px;
  line-height: 28px;
  position: relative;
}
.upload_input_button{
  width: 60px;
  float: right;
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  padding: 0;
  color: #ffffff;
}
.required{
  color: #ff0000;
}
.picker_checkbox{
  text-align: center;
  font-size: 14px;
}
.picker_checkbox checkbox{
  margin-right: 20px;
}
.picker_title{
  background-color: #52CAC1;
  line-height: 33px;
  color: #ffffff;
}
.picker_container{
  box-sizing: border-box;
  width: 100%;
  height: 100px; 
  border: 1px solid #52CAC1;
}
.picker_container picker-view-column{
  height: 98px;
}
.picker_content{
  line-height: 33px;
}
.picker_content_view{
  display: inline-block;
  width: 25%;
  text-align: center;
  font-size: 12px;
}

/*图片添加*/
.imagesearch{
  position: absolute;
  top: 30px;
  left: 10px;
  bottom: 10px;
  width: 19%;
}
.imagesearch_image{
  display: block;
  margin: auto;
  width: 16px;
  height: 16px;
  padding: 5px;
}
.imagesearch_text{
  font-size: 11px;
  color: #7C7C7C;
  text-align: center;
  line-height: 11px;
}
.image_container{
  height: 87px;
  padding-right: 10px;
  width: auto;
  white-space: nowrap;
}
.image_content{
  height: 85px;
  width: 85px;
  margin-right: 25px;
  border: 1px solid #52CAC1;
  display: inline-block;
  position: relative;
}
.image_content image{
  width: 100%;
  height: 100%;
}
.image_bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 25px !important;
  height: 25px !important;
  margin: auto;
}
.image_content video{
  width: 100%;
  height: 100%;
}
.image_search{
  margin-top: 20px;
}
.radio-group{
  margin-left: 20%;
}
.radio{
  font-size: 14px;
  width: 25%;
  display: inline-block;
  text-align: center;
}
radio,checkbox{
  zoom: 80%;
}
.submit{
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  padding: 0;
  position: absolute;
  width: 100px;
  bottom: 5px;
  left: 0;
  right: 0;
  margin: auto;
  color: #ffffff;
}

/*模态框2//添加种类*/
.modal2_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 98;
  opacity: 0;
  display: none;
}
.modal2_title{
  background-color: #52CAC1;
  position: relative;
}
.modal2_titleText{
  width: 25%;
  float: left;
}
.modal2_title_text{
  color: #ffffff;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  margin-top: 10px; 
  text-align: center;
}
.modal2_title_text:last-child{
  margin-bottom: 10px; 
}
.modal2_titleInput{
  width: 50%;
  float: left;
}
.modal2_title_input{
  box-sizing: border-box;
  background-color: #ffffff;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  min-height: 24px;
  margin-top: 10px; 
  padding-left: 8px;
}
.modal2_title_input:last-child{
  margin-bottom: 10px; 
}
.modal2_titleButton{
  width: 25%;
  float: left;
}
.modal2_title_add{
  width: 30px;
  height: 30px;
  font-size: 30px;
  position: absolute;
  top: 0;
  left: 75%;
  right: 12.5%;
  bottom: 0;
  margin: auto;
  line-height:30px;
  color: #ffffff;
}
.hover{
  background-color: transparent;
}
.modal2_title_delete{
  width: 30px;
  height: 30px;
  font-size: 30px;
  position: absolute;
  top: 0;
  left: 87.5%;
  right: 0;
  bottom: 0;
  margin: auto;
  line-height:30px;
  color: #ffffff;
}
.modal2_content{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
.modal2_content_option{
  box-sizing: border-box;
  float: left;
  width: 50%;
  padding: 5px;
  font-size: 14px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.modal2_content_option > radio{
  zoom: 80%;
  margin: 0 10px;
  float: left;
}
.modal2{
  position: absolute;
  top: 0;
  left: 10%;
  right: 10%;
  bottom: 0;
  height: 300px;
  margin: auto;
  background-color: #ffffff;
  z-index: 99;
  opacity: 0;
  display: none;
}
