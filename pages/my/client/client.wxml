<view style="overflow:hidden; min-height:100vh;">
  <view class="title clearfix">
    <image bindtap="packPageFilterCode" mode="aspectFit" src="../../../images/search.png" class="image_search" />
    <image src="../../../images/more.png" mode="aspectFit" class="title_image" bindtap="more_function" />
    <navigator url="clientAdd/clientAdd">
      <image src="../../../images/add.png" mode="aspectFit" class="title_image" />
    </navigator>
      <image src="../../../images/preparation.png" mode="aspectFit" class="title_image" style="margin-left:10px;" />
    <input class="title_input" type="text" name="search" placeholder="名称" bindinput="bindKeyInput" />
  </view>

  <view class="client">
    <view class="client_text {{client=='1' ? 'active' : ''}}" bindtap="clientType" data-client="1">客户</view>
    <view class="client_text {{client=='2' ? 'active' : ''}}" bindtap="clientType" data-client="2">供货商</view>
    <view class="client_text {{client=='3' ? 'active' : ''}}" bindtap="clientType" data-client="3">朋友</view>
    <view class="clear"></view>
  </view>
  <view class="client">
    <view class="client_text sort_text {{sort=='1' ? 'active' : ''}}" bindtap="clientSort" data-sort="1">名称</view>
    <view class="client_text sort_text {{sort=='2' ? 'active' : ''}}" bindtap="clientSort" data-sort="2">时间</view>
    <view class="client_text sort_text {{sort=='3' ? 'active' : ''}}" bindtap="clientSort" data-sort="3">积分</view>
    <view class="clear"></view>
  </view>
  <scroll-view class="content" scroll-y>
    <view class="client_container">
      <view class="client_content clearfix">
        <image image src="{{item.image ? item.image : '../../../images/image_none.png'}}" mode="aspectFill" class="client_tx" />
        <view class="clearfix">
          <view class="client_info">
            <view class="client_name">小雨</view>
            <view class="client_phone">13333333333</view>
          </view>
          <view class="client_info2">
            <text class="client_info2_text">打包会员</text>
            <text class="client_info2_text">积分：5</text>
            <view class="client_info2_text">区域：杭州市萧山区</view>
          </view>
        </view>
        <navigator url="account/account" class="client_button client_button2">对账</navigator>
        <navigator url="replenishment/replenishment" class="client_button client_button1">补货</navigator>
        <image image src="../../../images/update.png" mode="aspectFill" class="client_updata" bindtap="client_add" data-clientid="clientid" />
      </view>
    </view>
  </scroll-view>
</view>


