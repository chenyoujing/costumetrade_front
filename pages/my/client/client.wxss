.title{
  background-color: #52CAC1;
  padding: 15px 20px;
  padding-right: 0;
  position: relative;
  z-index: 3;
}
.search_input{
  margin-left: 2%; 
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 4px 10px;
  font-size: 14px;
  height:27px;
  min-height:27px;
  border-radius:3px;
}
.search_input_image{
  padding: 10px;
}
.title_image{
  float: right;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 10px;
}
.condition{
  width: 100%;
  height: 30px;
  position: relative;
  z-index: 2;
}
.client{
  width: 100%;
}
.client_text{
  box-sizing: border-box;
  text-align: center;
  float: left;
  font-size: 18px;
  line-height: 40px;
  height: 40px;
  color: #666666;
  border-bottom: 2px solid #DCDCDC;
  width: 33.33333333%;
}
.sort_text{
  font-size: 14px;
  line-height: 32px;
  height: 32px;
  color: #939393;
}
.active{
  color: #000000;
  border-bottom: 3px solid #3C6E68;
}


.content{
   box-sizing:border-box;
   position: absolute;
   top: 138px;
   left: 0;
   right: 0;
   bottom: 0;
}
.client_container{
  padding: 10px;
  position: relative;
}
.client_content{
  box-shadow: 0.5px 0.5px 2px #000000;
  padding: 30rpx;
  padding-right: 0;
  position: relative;
  background-color: #ffffff;
  transition: all 0.3s;
}
.client_tx{
  width: 160rpx;
  height: 160rpx;
  max-width: 80px;
  max-height: 80px;
  border-radius: 40px;
  float: left;
}
.client_info{
  box-sizing: border-box;
  float: left;
  width: 31%;
  padding-left: 20rpx;
}
.client_name{
  line-height: 30px;
  font-size: 18px;
  padding-bottom: 10px;
}
.client_phone{
  font-size: 12px;
  line-height: 20px;
}
.client_info2{
  float: left;
  width: 44%;
  padding-top: 5px;
}
.client_info2_text{
  font-size: 12px;
  line-height: 30px;
  padding: 0 20rpx;
}
.client_updata{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  padding: 7px;
  margin: auto;
}
.client_button{
  float: right;
  margin-bottom: -30rpx;
  width: 80px;
  font-size: 14px;
  background-color: #52CAC1;
  line-height: 24px;
  text-align: center;
  padding: 0;
  color: #ffffff;
}
.client_button1{
  margin-right: 1px;
}



/*批量删除*/
.delete_container{
  text-align: center;
  width: 50px;
  line-height: 115px;
  position: absolute;
  top: 10px;
  left: 10px;
  bottom: 10px;
}
.delete_container checkbox{
  width: 100%;
}
.batch_button,.batch_button_ok{
  position: absolute;
  left: 50%;
  right: 0;
  bottom: 0;
  text-align: center;
  background-color: #DBDBDB;
  font-size: 20px;
  line-height: 40px;
  height: 40px;
  overflow: hidden;
  transition: all 0.3s;
}
.batch_button_ok{
  left: 0;
  right: 50%;
  border-right: 2px solid #ffffff;
}
.bg_g{
  background-color: #52CAC1;
  color: #ffffff;
}



/*更多功能*/
.more_function{
  position: fixed;
  top: 65px;
  right: 0;
  background-color: #ffffff;
  box-shadow: 0.5px 0.5px 3px #000000;
  z-index: 11;
  opacity: 0;
  transform: scale(0.5) translate(16px,-36px);
  transition: all 0.3s;
}
.more_function::before{
  content: "";
  width: 0;
  height: 0;
  position: fixed;
  right: 8px;
  top: -30px;
  border: solid #ffffff; 
  border-width: 15px 10px; 
  border-left-color: transparent;
  border-top-color: transparent;
  border-right-color: transparent;
}
.more_function_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
}
.more_function_view{
  font-size: 14px;
  line-height: 24px;
  padding: 0 10px;
}
.animation{
  opacity: 1;
  transform: scale(1) translate(0,0);
}
