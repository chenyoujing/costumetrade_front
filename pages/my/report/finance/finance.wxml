<!--头部-->
<view class="title clearfix">
  <navigator open-type="navigateBack">
    <image src="../../../../images/back-away.png" mode="aspectFit" class="title_image_back" />
  </navigator>
  <view class="title_text">{{title}}</view>
  <image src="../../../../images/more.png" mode="aspectFit" class="title_more" bindtap="more_function" />
</view>

<scroll-view scroll-y class="report_scroll">
  <view class="finance_time">
    <view>时间：2017-05-04 00:00:00</view>
    <view>至2017-05-04 23:59:59</view>
  </view>
  <view class="finance_info">
    <view class="info_title">刷卡</view>
    <view class="finance_info_content">
      <view class="content_title">
        <view class="content_title_text">支付详情</view>
        <view class="content_title_text"></view>
        <view class="content_title_text">金额(元)</view>
      </view>
      <block wx:for="{{data}}">
        <view class="content_view">
          <view class="content_view_text">{{item.name}}</view>
          <view class="content_view_text"></view>
          <view class="content_view_text" style="color:#CE2726;">{{item.value}}</view>
        </view>
      </block>
    </view>
  </view>
</scroll-view>


<!--更多功能-->
<view class="more_function_cover {{animation}}" bindtap="more_function_close" style="display:{{more_function_display}};"></view>
<view class="more_function {{animation}}" style="display:{{more_function_display}};">
  <view class="more_function_view" data-type="1" bindtap="batchType">123</view>
  <view class="more_function_view" data-type="2" bindtap="batchType">112</view>
  <view class="more_function_view" data-type="3" bindtap="batchType">111</view>
</view>
