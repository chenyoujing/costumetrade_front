<import src="../../../../template/template.wxml"/>

<!--头部-->
<view class="title clearfix">
  <navigator open-type="navigateBack">
    <image src="../../../../images/back-away.png" mode="aspectFit" class="title_image_back" />
  </navigator>
  <view class="title_text">{{title}}</view>
    <image src="../../../../images/more.png" mode="aspectFit" class="title_more" bindtap="more_function" />
</view>

<scroll-view scroll-y class="report_scroll" >

  <template is="report_date" data="{{timebool:timebool,selected:selected,beginTime:beginTime,endTime:endTime,select:true}}"></template>

  <view class="pietitle" wx:if="{{title !== '利润分析'}}">库存</view> 
  <view  class="pietitle" wx:if="{{title == '利润分析'}}">利润分布</view>


  <view wx:if="{{total1 == 0}}" class="canvas" >
   <image class="nodataImg" src="../../../../images/report-no-pie.png" mode="aspectFit"/>
  </view>
  <canvas class="canvas" wx:if="{{total1>0}}" canvas-id="pieCanvas" bindtouchstart="touchHandler"/>

  <view  class="pietitle" wx:if="{{title !== '利润分析'}}">销售</view> 
  <view class="pietitle" wx:if="{{title == '利润分析'}}">销售额</view>

<view wx:if="{{total2 == 0}}" class="canvas" >
   <image class="nodataImg" src="../../../../images/report-no-pie.png" mode="aspectFit"/>
  </view>
  <canvas class="canvas"  wx:if="{{total2>0}}" canvas-id="pieCanvas2" bindtouchstart="touchHandler"/>

  <view class="bindtap_cover" bindtap="screen_colse" hidden="{{!screen}}"></view>
    <view class="classname" wx:if="{{title == '利润分析'}}">
 总计<progress percent="40" stroke-width="36" /> 
      <view> 总额：{{saleAmount}} 毛利率：{{grossProfit*100}}% </view>  
    </view>
</scroll-view>

<!--更多功能-->
 <template is="more_feature" data="{{animation:animation,more_function_close:more_function_close,more_function_display:more_function_display,productName:productName}}"></template>