.title{
  background-color: #52CAC1;
  padding: 15px 20px;
  position: relative;
  z-index: 3;
}
.title_input{
  margin-right: 20%;
  margin-left: 2%; 
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 4px 10px;
  font-size: 14px;
  height:27px;
  min-height:27px;
}
icon,.title button{
  position: absolute;
  top: 0;
  right: 25%;
  bottom: 0;
  margin: auto;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 15px;
}
.title button{
  width: 50px;
  height: 50px;
  padding: 0;
}
.title button icon{
  left: 0;
  right: 0;
  padding: 15px;
}
button::after{
  content: none;
}
.order_footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  border-top: 1px solid #E3E3E3;
  background-color: #ffffff;
}
.all_number{
  float: left;
  width: 25%;
  font-size: 16px;
  text-align: center;
  line-height: 50px;
}
.all_number::before{
  content: "共"
}
.all_number::after{
  content: "件"
}
.all_price{
  float: left;
  width: 40%;
  line-height: 50px;
  color: #ff0000;
  font-size: 18px;
}
.all_price::before{
  content: "合计:";
  color: #000000;
}
.all_button{
  float: left;
  width: 35%;
  text-align: center;
  font-size: 18px;
  background-color: #ff0000;
  height: 50px;
  line-height: 50px;
  color: #ffffff;
}
.content{
  box-sizing: border-box;
}
.content_container{
  position: relative;
  margin: 10px 20px;
}
.tr {
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
  text-align: center;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.td {
  font-size: 12px;
  float: left;
  justify-content: center;
  text-align: center;
  height: 40px;
  line-height: 40px;
}
.th1{
  width: 10%;
  background: #eeeeee;
}
.th2{
  width: 20%;
  background: #ffffff;
}
.tr1{
  border-bottom: 1px solid #eeeeee; 
}
.th{
  font-size: 12px;
  justify-content: center;
  background-color: #52CAC1;
  color: #fff;
  display: inline-block;
  line-height: 40px;
  align-items: center;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}


.order{
  position: fixed;
  top: 100%;
  left: 0;
  right: 0;
  bottom: -100%;
  background-color: #ffffff;
  z-index: 9;
  transition: all 0.5s;
}
.order_title{
  background-color: #52CAC1;
  font-size: 16px;
  line-height: 24px;
  padding: 8px;
  color: #ffffff;
  text-align: center;
}
.order_close{
  position: absolute;
  top: 0;
  right: 10px;
  color: #ffffff;
  font-size: 32px;
  line-height: 40px;
}
.order scroll-view{
  position: absolute;
  top: 40px;
  bottom: 50px;
}
.order_info,.pay_info{
  border-bottom: 5px solid #DBF4F1;
  padding: 20px;
}
.bill{
  padding: 20px;
}
.info_title{
    font-size: 20px;
    padding-bottom: 20px;
}
.price_total{
  float: left;
  width: 35%;
  font-size: 14px;
  text-align: left;
  color: #ff0000;
}
.price_amount{
  float: left;
  width: 35%;
  font-size: 14px;
  text-align: center;
  color: #ff0000;
}
.price_unpaid{
  float: left;
  width: 30%;
  font-size: 14px;
  text-align: right;
}
.price_total::before{
  content: "合计金额:";
  color: #000000;
}
.price_amount::before{
  content: "实际金额:";
  color: #000000;
}
.price_unpaid::before{
  content: "未付:";
  color: #000000;
}
.order_input{
  padding: 10px 30px 0;
}
.order_input:last-child{
  margin-bottom: 10px;
}
.order_input_text{
  width: 30%;
  float: left;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
}
.order_input1,.order_input2{
  border: 1px solid #52CAC1;
  font-size: 14px;
  padding-left: 7px; 
  height: 28px;
}
.order_input2{
  margin-right: 70px;
}
.bill_content picker{
  border: 1px solid #52CAC1;
  height: 28px;
  margin-right: 70px;
  margin-left: 30%;
  text-align: center;
  width: auto;
  font-size: 14px;
  line-height: 28px;
}
.order_input_button{
  width: 60px;
  float: right;
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  padding: 0;
  color: #ffffff;
}
.bill_content{
  padding: 0 30px;
}
.bill_content_button{
  box-sizing: border-box;
  width: 50%;
  float: left;
  border: 1px solid #52CAC1;
  text-align: center;
  padding: 5px;
  font-size: 16px;
  margin-bottom: 20px;
}
.submit{
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  padding: 0;
  position: absolute;
  width: 100px;
  bottom: 5px;
  left: 0;
  right: 0;
  margin: auto;
  color: #ffffff;
}

/*打印账单模态框*/
.modal_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 98;
  opacity: 0;
}
.modal_title{
  background-color: #52CAC1;
  position: relative;
}
.modal_titleText{
  width: 25%;
  float: left;
}
.modal_title_text{
  color: #ffffff;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  margin-top: 10px; 
  text-align: center;
}
.modal_title_text:last-child{
  margin-bottom: 10px; 
}
.modal_titleInput{
  width: 50%;
  float: left;
}
.modal_title_input{
  box-sizing: border-box;
  background-color: #ffffff;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  min-height: 24px;
  margin-top: 10px; 
  padding-left: 8px;
}
.modal_title_input:last-child{
  margin-bottom: 10px; 
}
.modal_titleButton{
  width: 25%;
  float: left;
}
.modal_title_add{
  width: 30px;
  height: 30px;
  font-size: 30px;
  position: absolute;
  top: 0;
  left: 75%;
  right: 12.5%;
  bottom: 0;
  margin: auto;
  line-height:30px;
  color: #ffffff;
}
.hover{
  background-color: transparent;
}
.modal_title_delete{
  width: 30px;
  height: 30px;
  font-size: 30px;
  position: absolute;
  top: 0;
  left: 87.5%;
  right: 0;
  bottom: 0;
  margin: auto;
  line-height:30px;
  color: #ffffff;
}
.modal_content{
  position: absolute;
  top: 65px;
  left: 0;
  right: 0;
  bottom: 40px;
}
.bill_number{
  position: absolute;
  top: 0;
  left: 10%;
  right: 10%;
  bottom: 0;
  height: 30px;
  margin: auto;
}
.modal{
  position: absolute;
  top: 0;
  left: 10%;
  right: 10%;
  bottom: 0;
  height: 220px;
  margin: auto;
  background-color: #ffffff;
  z-index: 99;
  opacity: 0;
}
.modal_header{
  font-size: 18px;
  line-height: 24px;
  padding: 0 8px;
  text-align: center;
  background-color: #52CAC1;
  color: #ffffff;
}
.modal_header_title{
  border-bottom: 1px solid #DBF4F1;
  padding: 8px;
}
.modal_header_content{
  font-size: 13px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.modal_close{
  position: absolute;
  top: 0;
  right: 10px;
  font-size: 32px;
  line-height: 40px;
  color: #ffffff;
}
.bill_close{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 50%;
  height: 40px;
  line-height: 40px;
  font-size: 18px;
  text-align: center;
  background-color: #DCDCDC;
}
.bill_submit{
  position: absolute;
  bottom: 0;
  left: 50%;
  right: 0;
  height: 40px;
  line-height: 40px;
  font-size: 18px;
  text-align: center;
  background-color: #52CAC1;
  color: #ffffff;
}