/* pages/my/Goods/Goods.wxss */
.title{
  background-color: #52CAC1;
  padding: 15px 20px;
  position: relative;
  z-index: 3;
}
.title_input{
  margin-right: 20%;
  margin-left: 2%; 
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 4px 10px;
  font-size: 14px;
  height:27px;
  min-height:27px;
}
icon,.title button{
  position: absolute;
  top: 0;
  right: 25%;
  bottom: 0;
  margin: auto;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 15px;
}
.title button{
  width: 50px;
  height: 50px;
  padding: 0;
}
.title button icon{
  left: 0;
  right: 0;
  padding: 15px;
}
button::after{
  content: none;
}
