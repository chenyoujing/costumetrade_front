/*头部*/
@import "../../../../css/title.wxss";

.title_image_back{
  width: 16px;
  height: 16px;
  padding: 12px;
}
.expenses_title_image{
  float: left;
  width: 16px;
  height: 16px;
  padding: 12px 7px;
}
.expenses_title_text{
  float: left;
  font-size: 14px;
}
.title_more_image{
  float: right;
  width: 20px;
  height: 20px;
  padding: 10px;
}
.title_button_view{
  overflow: hidden;
  position: relative;
  padding-left: 10px;
}
.title_button_view2{
  width: 50%;
  float: left;
}
.title_button{
  background-color: #ffffff;
  color: #000000;
  border-radius: 5px;
  line-height: 30px;
  margin: 5px;
}


.expenses_view1{
  position: absolute;
  top: 40px;
  left: 0;
  right: 50%;
  bottom: 0;
  width: auto;
}
.expenses_view2{
  position: absolute;
  top: 40px;
  left: 50%;
  right: 0;
  bottom: 0;
  background-color: #EEEEEE;
  width: auto;
}
.content_title{
  margin: 0 2px;
  border: 1px solid #A8A8A8;
  font-size: 20px;
  line-height: 34px;
  text-align: center;
  border-radius: 5px;
  background-color: #ffffff;
}
.expenses_detail{
  font-size: 18px;
  line-height: 40px;
  margin-top: 10px;
}
.expenses_detail_text{
  float: left;
  width: 30%;
  height: 40px;
  text-align: center;
}
.expenses_detail_unit{
  float: right;
  width: 20%;
  text-align: center;
}
.expenses_detail_input{
  border: 1px solid #A8A8A8;
  height: 38px;
  line-height: 38px;
  padding: 0 10px;
}
.expenses_detail_info{
  margin-top: 50px;
  border-top: 2px solid #EEEEEE;
}
.expenses_detail_num{
  float: left;
  font-size: 14px;
  padding: 5px;
}
.expenses_detail_num::before{
  content: "数量：";
  color: #666666;
}
.expenses_detail_price{
  float: left;
  color: #FE2D04;
  font-size: 14px;
  padding: 5px;
}
.expenses_detail_price::before{
  content: "合计金额：";
  color: #666666;
}

.expenses_item{
  margin: 10px 10%;
  border: 1px solid #A8A8A8;
  text-align: center;
  font-size: 18px;
  line-height: 38px;
  height: 38px;
  background-color: #ffffff;
}

/*入账模态框*/
.modal_pay{
  box-sizing: border-box;
  float: left;
  width: 30%;
  color: #000000;
  font-size: 16px;
  margin-right: 10px;
  text-align: center;
  height: 36px;
  line-height: 34px;
  border: 1px solid #B5B5B5;
  padding-right: 20px;
}
.pay_input{
  border: 1px solid #B5B5B5;
  color: #000000;
  font-size: 16px;
  height: 34px;
  line-height: 34px;
  padding: 0 8px;
}