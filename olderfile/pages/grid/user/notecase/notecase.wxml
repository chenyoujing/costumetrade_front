      <view style="float:left">交易管理</view>
      <image src="../../../../images/down.png" mode="aspectFit" class="account_image " />
      <view class="clear"></view>
    </view>
  </view>

  <view class="account" hidden="{{current!='1'}}">
    <view class="account_view">
      <view style="float:left">姓名</view>
      <view style="float:right">小小</view>
