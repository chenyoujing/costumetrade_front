      <image src="../../../../images/down.png" mode="aspectFit" class="image_down " />
    </view>
    <view class="notecase_text {{current=='1' ? 'active' : ''}}" bindtap="notecasetype" data-notecase="1">银行卡管理
      <image src="../../../../images/down.png" mode="aspectFit" class="image_down " />
