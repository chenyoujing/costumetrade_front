/**app.wxss**/
page,input{
  font-family: Microsoft YaHei;
  
}
input{
  min-height: 1px;
  padding: 0 8px;
}
button{
  background-color: transparent;
  margin: 0;
  padding: 0;
  border: none;
}
button::after {
  content: none;
}
radio,checkbox{
  zoom: 80%;
  position:relative;
  top:-2px;
}
/*单行不换行*/
.one_line{
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;

}
/*input必填*/
.required{
  color: #ff0000;
}
/*清除浮动*/
.clear{
  clear: both;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/*提示小圆点*/
.prompt{
  position: absolute;
  height: 8px;
  min-width: 8px;
  border-radius: 4px;
  background-color: #ff0000;
  font-size: 8px;
  line-height: 8px;
  text-align: center;
  color: #ffffff;
}
/*搜索input*/
.search_input{
  position: relative;
  padding-right: 30px;
}
.search_input_image{
  width: 16px;
  height: 16px;
  padding: 7px;
  position: absolute;
  top: -4px;
  right: 0;
  z-index: 4;
  display: block;
}
/*覆盖，bindatp用*/
.bindtap_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
/*扫码框*/
.scan_modal_image{
  width:50%;
  margin: 20px 25% 0;
}
.scan_modal_text{
  text-align: center;
  color: #000000;
  font-size: 10px;
  margin-bottom: 20px;
}
/*更多功能*/
.more_function{
  position: fixed;
  top: 50px;
  right: 0;
  background-color: #ffffff;
  box-shadow: 0.5px 0.5px 3px #000000;
  z-index: 11;
  opacity: 0;
  transform: scale(0.5) translate(16px,-36px);
  transition: all 0.3s;
}
.more_function::before{
  content: "";
  width: 0;
  height: 0;
  position: fixed;
  right: 8px;
  top: -30px;
  border: solid #ffffff; 
  border-width: 15px 10px; 
  border-left-color: transparent;
  border-top-color: transparent;
  border-right-color: transparent;
}
.more_function_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
}
.more_function_view{
  font-size: 14px;
  line-height: 24px;
  padding: 0 10px;
}
.animation{
  opacity: 1;
  transform: scale(1) translate(0,0);
}
/*下拉框箭头*/
picker{
  position: relative;
}
.picker_image{
  width: 10px;
  height: 10px;
  position: absolute;
  right: 10px;
  top: 0;
  bottom: 0;
  margin: auto;
}
/*无数据时提示*/
.prompt_none{
  width: 100%;
  padding-top: 30px;
  padding-bottom: 10px;
  text-align: center;
  font-size: 14px;
  line-height: 20px;
}
.prompt_none text{
  background-color: #E5E5E5;
  padding: 10px;
  border-radius: 3px;
  vertical-align: middle;
  display:inline-block;
}
/*返回按钮*/
.back_nav{
  width: 30px;
  height: 30px;
  position: fixed;
  top: 5px;
  left: 5px;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 15px;
  z-index: 1;
}
.back{
  width: 16px;
  height: 16px;
  padding: 7px;
}
title_image_back{
  display: unset;
}

/*选择快递*/
.logistics_choose{
  text-align: center;
  margin: 10px 20px;
}
.choose_view{
  background-color: #DCDCDC;
  color: #000000;
  font-size: 16px;
  line-height: 40px;
  padding: 0 8px;
  width: auto;
}