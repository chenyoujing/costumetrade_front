.supplier_list{
  display: flex;
  align-items: center;
  height: 56px;
  padding: 0 10px;
}
.supplier_list_image{
  width: 40px;
  height: 40px;
  margin: 0 15px;
}
.supplier_list_text{
  font-size: 16px;
}
.order_type{
  background-color: #E5E5E5;
  font-size: 13px;
  height: 20px;
  display: flex;
  align-items: center;
  padding: 0 25px;
}

.ordertype_text{
  box-sizing: border-box;
  color: #202020;
  text-align: center;
  float: left;
  font-size: 18px;
  line-height: 40px;
  height: 40px;
  width: 50%;
}
.ordertype2{
  border-top: 1px solid #B3B3B3;
}
.ordertype2_text{
  box-sizing: border-box;
  border-bottom: 1px solid #B3B3B3;
  color: #353535;
  text-align: center;
  background-color: #EAEAEA;
  float: left;
  font-size: 14px;
  line-height: 32px;
  height: 32px;
  width: 25%;
  position: relative;
}
.ordertype2_prompt{
  position: relative;
  display: inline-block;
  top: -8px;
  left: -2px;
  height: 8px;
  min-width: 8px;
  border-radius: 4px;
  background-color: #EC6877;
  font-size: 8px;
  line-height: 8px;
  text-align: center;
  color: #ffffff;
}
.ordertype_active1{
  border-bottom: 3px solid #286561;
}
.ordertype_active2{
  background-color: #ffffff;
  border-bottom: 2px solid #286561;
}

.order_scroll{
  position: absolute;
  top: 80px;
  left: 0;
  right: 0;
  bottom: 0;
}
.order_container_view{
  margin: 0 10px 15px;
  box-shadow: 1px 1px 4px #000000;
}
.order_container_title{
  border-bottom: 3px solid #DBF4F1;
  padding: 10px;
  position: relative;
}
.order_container_name{
  font-size: 14px;
  color: #000000;
  line-height: 20px;
  float: left;
  width: 65%;
}
.order_container_Bill{
  font-size: 14px;
  line-height: 20px;
  text-align: center;
}
.order_content_right{
  height: 10px;
  width: 10px;
  padding: 10px;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.order_container_content_left{
  box-sizing: border-box;
  padding: 10px 0 10px 15px;
  float: left;
  width: 65%;
}
.order_container_number{
  font-size: 15px;
  line-height: 24px;
  padding-bottom: 5px;
}
.order_container_text{
  color: #353535;
  font-size: 12px;
  line-height: 24px;
}
.order_container_text:first-child{
  padding-bottom: 5px;
}
.order_container_input{
  padding: 0 8px;
  line-height: 22px;
  border: 1px solid #999999;
}
.order_container_content_right{
  box-sizing: border-box;
  padding: 10px 0;
  float: left;
  width: 35%;
  text-align: center;
}
.order_container_person{
  margin-top:10px;
  font-size: 10px;
}
.order_container_button{
  box-sizing: border-box;
  float: right;
  width: 33.33333333%;
  height: 35px;
  font-size: 14px;
  color: #000000;
  background-color: #E5E5E5;
  text-align: center;
  line-height: 35px;
}
.btn_1{
  background-color: #FF2D04;
  color: #ffffff;
}
.btn_2{
  background-color: #52CAC1;
  color: #ffffff;
}
.btn_3{
  border: 1px solid #BEBEBE;
  background-color: #ffffff;
}


/*模态框*/
.logistics_title{
  box-sizing: border-box;
  color: #000000;
  float: left;
  font-size: 14px;
  line-height: 30px;
  text-align: center;
  margin-bottom: 10px;
  white-space:nowrap;
}
.logistics_picker{
  box-sizing: border-box;
  color: #000000;
  float: left;
  font-size: 14px;
  line-height: 30px;
  height: 30px;
  text-align: center;
  width: 25%;
  margin-right: 3%;
  position: relative;
}
.picker{
  padding-right: 15px;
}
.picker_image{
  width: 10px;
  height: 10px;
  position: absolute;
  right: 5px;
  top: 0;
  bottom: 0;
  margin: auto;
}
.image_scan{
  width: 18px;
  height: 18px;
  padding:5px 0 5px 17px;
  float: right;
}
.logistics_number{
  color: #000000;
  font-size: 14px;
  border: 1px solid #286561;
  line-height: 28px;
  height: 28px;
  padding: 0 7px;
}


modal{
  min-height: 200px;
}
.choose_container{
  margin: 0 -20px;
  padding: 20px 0;
}
.logistics_choose{
  text-align: center;
  margin: 10px 20px;
}
.choose_view{
  background-color: #DCDCDC;
  color: #000000;
  font-size: 16px;
  line-height: 40px;
  padding: 0 8px;
  width: auto;
}


/*销售-全部-修改*/
.modal_pay{
  box-sizing: border-box;
  float: left;
  width: 30%;
  color: #000000;
  font-size: 16px;
  margin-right: 10px;
  text-align: center;
  height: 36px;
  line-height: 34px;
  border: 1px solid #B5B5B5;
  padding-right: 20px;
}
.order_input_button{
  width: 60px;
  float: right;
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 36px;
  margin-left: 10px;
  text-align: center;
  padding: 0;
  color: #ffffff;
}
.pay_input{
  border: 1px solid #B5B5B5;
  color: #000000;
  font-size: 16px;
  height: 34px;
  line-height: 34px;
  padding: 0 8px;
}