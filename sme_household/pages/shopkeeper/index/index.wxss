
.shop_scroll{
  padding-bottom: 46px;
}

.index_title{
  position: relative;
}
.index_dictionary,.index_share{
  position: absolute;
  top: 0;
  font-size: 14px;
  color: #ffffff;
  line-height: 20px;
  padding: 5px 10px;
  z-index: 1;
}
.index_dictionary{
  left: 0;
}
.index_share{
  right: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  line-height: unset;
}
.index_share image{
  width: 20px;
  height: 20px;
  display: block;
}
.index_title_bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.my_title{
  height: 80px;
  padding: 0 50px;
  color: #ffffff;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.tx_nav{
  display: flex;
  align-items: center;
  height: 70px;
  flex-shrink: 0;
}
.my_tx{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 10px;
}
.my_info{
  min-width: 110px;
  height: 70px;
  overflow: hidden;
}
.my_name{
  min-width: 110px;
  border-bottom: 1px solid #DBF4F1;
  font-size: 18px;
  height: 34px;
  line-height: 34px;
  text-align: center;
}
.my_fans{
  flex: 1;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 12px;
  line-height: 12px;
}
.my_fans::after{
  content: " 粉丝";
  color: #ffffff;
}
.operation_view{
  display: flex;
  opacity: 0.9;
}
.operation{
  flex: 1;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 11px;
  color: #ffffff;
  line-height: 24px;
}
.operation image{
  width: 40px;
  height: 40px;
}

.index_report{
  display: flex;
  border-bottom: 5px solid #E5E5E5;
}
.canvas{
  width: 75%;
  height: 150px;
}
.index_report_content{
  width: 25%;
  display: flex;
  flex-direction: column;
}
.index_report_text{
  font-size: 12px;
  flex: 1;
  display: flex;
  align-items: center;
}


.index_news{
  padding: 5px 20px;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 5px solid #E5E5E5;
}