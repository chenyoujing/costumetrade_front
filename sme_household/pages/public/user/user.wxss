.my_container{
  position: absolute;
  top: 0;
  bottom: 46px;
}
.my_title{
  background-color: #52CAC1;
  padding: 20px;
  color: #ffffff;
  position: relative;
  display: flex;
  justify-content: center;
}
.my_tx{
  flex-shrink: 0;
  width: 70px;
  height: 70px;
  border-radius: 35px;
  float: left;
  margin-right: 20px;
}
.my_info{
  min-width: 120px;
  height: 60px;
  overflow: hidden;
  max-width: calc(100% - 100px);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.my_name{
  font-size: 18px;
  height: 34px;
  line-height: 34px;
  text-align: center;
}
.my_fans{
  flex: 1;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff0000;
  font-size: 12px;
  line-height: 12px;
  border-top: 2px solid #DBF4F1;
}
.my_fans::after{
  content: " 粉丝";
  color: #ffffff;
}
.my_share{
  box-sizing: border-box;
  width: 50%;
  font-size: 12px;
  line-height: 18px;
  float: left;
  text-align: center;
}
.my_code{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  position: absolute;
  right: 0;
  top: 0;
  color: #ffffff;
  padding: 5px 10px;
  z-index: 1;
}
.my_code image{
  width: 20px;
  height: 20px;
  display: block;
}
.operation{
  padding: 0 10px;
  background-color: #EBEBEB;
}
.operation navigator,.operation .navigator{
  width: 25%;
  padding-top: 10px;
  float: left;
  text-align: center;
  position: relative;
}
.operation_image{
  width: 100%;
  height: 25px;
  display: block;
}
.operation_text{
  font-size: 12px;
  line-height: 30px;
  color: #286561;
}
.my_content{
  padding: 0 10px 15px;
}
.my_content_view{
  margin-top: 15px;
  box-shadow: 1px 1px 4px #000000;
}
.my_content_view navigator,.navigator{
  margin: 0 20px;
  border-bottom: 1px solid #286561;
  position: relative;
  height: 40px;
}
.my_content_view navigator:last-child{
  border-bottom: none;
}
.my_content_image{
  width: 20px;
  height: 20px;
  padding: 10px;
  float: left;
}
.my_content_text{
  float: left;
  margin-left: 10px;
  font-size: 14px;
  line-height: 40px;
}
.my_content_right{
  height: 10px;
  width: 10px;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}