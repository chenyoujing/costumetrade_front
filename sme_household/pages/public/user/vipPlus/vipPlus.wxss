/*头部*/
@import "../../../../css/title.wxss";

.vipPlus_container{
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  bottom: 50px;
}

.vip_explain{
  padding: 15px;
  border-bottom: 5px solid #DBF4F1;
}
.explain_title{
  text-align: center;
  font-size: 18px;
  line-height: 30px;
}
.explain_title2{
  text-align: center;
  font-size: 13px;
  line-height: 30px;
}
.explain_text{
  font-size: 13px;
  line-height: 18px;
  padding: 3px 0;
}
.vip_content{
  width: auto;
  display: flex;
  margin-top: 10px;
}
.vip_content checkbox-group{
  margin-left: -10px;
  width: 70px;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.vip_view{
  height: 40px;
  width: 100%;
  border: 1px solid #52CAC1;
  background-color: #ffffff;
  color: #000000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 20px;
  padding-right: 5px;
}
.vip_view_name{
  font-size: 16px;
  line-height: 20px;
  padding-right: 10px;
}
.vip_view_price{
  font-size: 13px;
  line-height: 24px;
  flex-shrink: 0;
}
.vip_active{
  background-color: #52CAC1;
  color: #ffffff;
}
.vip_pay_title{
  font-size: 13px;
  padding: 10px 15px;
}
.vip_prompt{
  color: #FE2D04;
  text-align: center;
  font-size: 11px;
  line-height: 30px;
}
.vip_price_view{
  display: flex;
  justify-content: space-between;
}
.vip_price_prompt{
  color: #999999;
  font-size: 14px;
  display:flex;
  align-items:center;
}
.vip_price{
  color: #FE2D04;
  font-size: 18px;
  padding: 0 10px;
  flex-shrink: 0;
}
.vip_price::before{
  content: "应付金额：";
  color: #000000;
  font-size: 14px;
}

.vip_num{
  float: right;
}
.vip_num_view{
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 28px;
  font-size: 14px;
  border: 1px solid #777777;
  min-width: 28px;
  text-align: center;
}
.number{
  border-width: 1px 0;
}
.subtract,.add{
  font-size: 20px;
}


.vip_bottom{
  background-color: #ffffff;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
}
.bottom_info{
  border: 1px solid #B9CDCB;
  margin-right: 210rpx;
  height: 48px;
  line-height: 48px;
  color: #FE2D04;
  padding-left: 20px;
  padding-right: 10px;
  font-size: 18px;
}
.bottom_info::before{
  content: "总计：";
  color: #000000;
  font-size: 16px;
}
.bottom_button{
  background-color: #FE2D04;
  color: #ffffff;
  float: right;
  font-size: 20px;
  line-height: 50px;
  height: 50px;
  width: 210rpx;
  text-align: center;
}