<import src="../../../template/template.wxml"/>

<scroll-view scroll-y class="shop_scroll"  lower-threshold="10" bindscrolltolower="{{loadMore?'onReachBottom':''}}" style="bottom:{{shopkeeper?'0':''}}">
  <!--轮播图-->
  <swiper indicator-dots autoplay circular class="shop_swiper">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item ? item : '../../../images/image_none.png'}}" class="shop_swiper_image" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>

  <!-- 点艺公告 -->
  <template is="notice" wx:if="{{!shopkeeper}}"></template>
 
  <template is="promptNone" data="{{product:otherStord,text:'你还没有收到过图片'}}"></template>

  <view class="shop_content" wx:for="{{otherStord}}">
    <view class="shop_content_view">
      <view class="shop_content_title">
        <navigator url="storeDetails/storeDetails?id={{item.storeid}}" class="shop_content_tx">
          <image src="{{item.photo||'../../../images/image_none.png'}}" mode="aspectFill" />
        </navigator>
        <view class="shop_content_info">
          <view class="shop_content_name">
            <navigator url="storeDetails/storeDetails?id={{item.storeid}}" class="shop_content_name_title one_line">{{item.promoterName}}</navigator>
            <navigator url="mall/mall?id={{item.storeid}}&storephoto={{item.photo}}" class="shop_content_time">
              <view class="shop_content_unread">
                <view class="shop_content_unread_prompt">9</view>
                未读信息
              </view>
              <text>2017-07-15</text>
            </navigator>
          </view>
        </view>
        <view class="shop_content_service">
          <image src="../../../images/customer_service.png"  class="shop_content_service" mode="aspectFit" />
          客服
        </view>
      </view>
      <navigator url="mall/mall?id={{item.storeid}}&storephoto={{item.photo}}">
        <view class="shop_content_address two_line">
          {{item.title}}
        </view>
        <view class="shop_goods">
          <image src="{{item.images[0]?url+item.images[0]:'../../../images/shop1_1.png'}}" mode="aspectFill" class="shop_picture" />
          <image src="{{item.images[1]?url+item.images[1]:'../../../images/shop1_1.png'}}" mode="aspectFill" class="shop_picture" />
          <image src="{{item.images[2]?url+item.images[2]:'../../../images/shop1_1.png'}}" mode="aspectFill" class="shop_picture" />
        </view>
      </navigator>
    </view>
  </view>
