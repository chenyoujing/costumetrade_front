</form> 
<navigator url="Bluetooth/Bluetooth">
  <button> 搜索 </button>
</navigator>-->
  
</scroll-view>

<template is="navBottom" data="{{nav:'首页'}}" wx:if="{{!shopkeeper}}"></template>
<template is="backNav" data="{{layer:3}}" wx:if="{{shopkeeper}}"></template>
