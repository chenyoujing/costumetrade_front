/*头部*/
@import "../../../../css/title.wxss";

/*货品详情*/
.upload{
  background-color:#ffffff;
}

.template_reg_text{
  margin-left: calc(20% + 10px);
}
/* 一键上架 */
.upload_swiper{
  height: calc(100vh - 120px);
}
.goodsInfo{
  height: 40px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  background-color: #ffffff;
  color: #286561;
  z-index: 10;
}

.upload_container{
  padding: 0 0 40px;
}
.upload_input{
  padding: 0 10px;
  margin-top: 10px;
  position: relative;
}
.upload_input:last-child{
  padding-bottom: 15px;
}
.upload_input_text{
  width: 20%;
  float: left;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
}
.upload_input1,.upload_input2{
  border: 1px solid #AFAFAF;
  font-size: 14px;
  padding: 0 16px; 
  height: 28px;
}
.upload_input > picker{
  border: 1px solid #AFAFAF;
  height: 28px;
  margin-left: 20%;
  width: auto;
  font-size: 14px;
  line-height: 28px;
  position: relative;
  padding-left: 16px;
  padding-right: 30px;
}
.picker_image,.code_image,.update_image{
  width: 10px;
  height: 10px;
  position: absolute;
  right: 10px;
  top: 0;
  bottom: 0;
  margin: auto;
}
.code_image{
  width: 16px;
  height: 16px;
  padding: 7px;
  bottom: unset;
}
.update_image{
  width: 12px;
  height: 12px;
  padding: 9px;
  bottom: unset;
}
.upload_date{
  width: 50%;
  float: left;
}
.upload_date_text{
  width: 50%;
  font-size: 13px;
  float: left;
  line-height: 30px;
  text-align: center;
}
.upload_date picker{
  border: 1px solid #AFAFAF;
  height: 28px;
  margin-left: 50%;
  text-align: center;
  width: auto;
  font-size: 13px;
  line-height: 28px;
  position: relative;
}
.upload_input_button{
  width: 60px;
  float: right;
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  padding: 0;
  color: #ffffff;
}
.required{
  color: #ff0000;
}

.picker_content{
  box-sizing: border-box;
  line-height: 33px;
  width: 80%;
  float: left;
  padding-right:30px; 
  position: relative;
}
.picker_content_view,.picker_content_title{
  float: left;
  width: 25%;
  text-align: center;
  font-size: 12px;
  box-sizing: border-box;
  border: 1px solid #DDDDDD;
  background-color: #ffffff;
  line-height:33px;
  height:33px;
}
.picker_content_title{
  background-color: #EEEEEE;
}
.picker_update_image{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  padding: 7px;
}

/*图片添加*/
.imagesearch{
  position: absolute;
  top: 30px;
  left: 10px;
  bottom: 10px;
  width: 19%;
  padding: 10px 0;
  z-index: 1;
}
.imagesearch_image{
  display: block;
  margin: auto;
  width: 16px;
  height: 16px;
  padding: 5px;
}
.imagesearch_text{
  font-size: 11px;
  color: #7C7C7C;
  text-align: center;
  line-height: 11px;
}
.image_container{
  height: 87px;
  padding-right: 10px;
  width: auto;
  white-space: nowrap;
}
.image_content{
  height: 85px;
  width: 85px;
  margin-right: 25px;
  border: 1px solid #AFAFAF;
  display: inline-block;
  position: relative;
}
.image_content image{
  width: 100%;
  height: 100%;
}
.image_bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 25px !important;
  height: 25px !important;
  margin: auto;
  z-index: -1;
}
.image_content video{
  width: 100%;
  height: 100%;
  position: relative;
}
.image_search{
  margin-top: 20px;
}
.radio-group{
  margin-left: 20%;
}
.radio{
  font-size: 14px;
  width: 25%;
  display: inline-block;
  text-align: center;
}
.submit_view{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40px;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background-color: #ffffff;
  color: #ffffff;
  font-size: 16px;
}
.submit{
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  width: 100px;
  color: #ffffff;
}

/*模态框2//添加种类*/
.modal2_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 98;
  opacity: 0;
  display: none;
}
.modal2_title{
  background-color: #52CAC1;
  position: relative;
}
.modal2_titleText{
  width: 25%;
  float: left;
}
.modal2_title_text{
  color: #ffffff;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  margin-top: 10px; 
  text-align: center;
}
.modal2_title_text:last-child{
  margin-bottom: 10px; 
}
.modal2_titleInput{
  width: 50%;
  float: left;
}
.modal2_title_input{
  box-sizing: border-box;
  background-color: #ffffff;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  min-height: 24px;
  margin-top: 10px; 
  padding-left: 8px;
}
.modal2_title_input:last-child{
  margin-bottom: 10px; 
}
.modal2_titleButton{
  width: 25%;
  float: left;
}
.modal2_title_add{
  width: 30px;
  height: 30px;
  font-size: 30px;
  position: absolute;
  top: 0;
  left: 75%;
  right: 12.5%;
  bottom: 0;
  margin: auto;
  line-height:30px;
  color: #ffffff;
}
.hover{
  background-color: transparent;
}
.modal2_title_delete{
  width: 30px;
  height: 30px;
  font-size: 30px;
  position: absolute;
  top: 0;
  left: 87.5%;
  right: 0;
  bottom: 0;
  margin: auto;
  line-height:30px;
  color: #ffffff;
}
.modal2_content{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
.modal2_content_option{
  box-sizing: border-box;
  float: left;
  width: 50%;
  padding: 5px;
  font-size: 14px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.modal2_content_option > radio{
  zoom: 80%;
  margin: 0 10px;
  float: left;
}
.modal2{
  position: absolute;
  top: 0;
  left: 10%;
  right: 10%;
  bottom: 0;
  height: 300px;
  margin: auto;
  background-color: #ffffff;
  z-index: 99;
  opacity: 0;
  display: none;
}

/*修改收货价模态框*/
.table{
  width:100%;
}
.table_text{
  box-sizing: border-box;
  float: left;
  width: 25%;
  color: #000000;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
  height: 32px;
  border: 1px solid #E3E3E3;
}
.bg_g{
  background-color: #52CAC1;
  color: #ffffff;
}
.bg_gray{
  background-color: #EEEEEE;
}
