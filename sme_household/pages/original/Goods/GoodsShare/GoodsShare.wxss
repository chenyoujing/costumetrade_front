.share_container{
  padding:25rpx 0;
  min-height:600rpx;
  box-sizing:border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  align-content: space-around;
}
.goods_container{
  float: left;
  box-sizing:border-box;
  width: 240rpx;
  margin: 5rpx;
  height: 240rpx;
  display: block;
  box-shadow: 0.5px 0.5px 2px #000000;
  border-radius: 3px;
}
.one{
  justify-content: center;
}
.one .goods_container{
  width: 500rpx;
  height: 500rpx;
}
.two .goods_container{
  width: 355rpx;
  margin: 10rpx;
  height: 355rpx;
}
.share_scroll{
  position: absolute;
  top: calc(600rpx + 55px);
  left: 0;
  right: 0;
  bottom: 0;
}
.goods_container2{
  float: left;
  box-sizing:border-box;
  width: 210rpx;
  padding: 10rpx 20rpx 0;
}
.goods_container2 .content_container > image{
  width: 100%;
  height: 170rpx;
  display: block;
}
.goods_container2 .content_container_text{
  font-size: 10px;
  line-height: 34rpx;
}


.share_text{
  padding-top:10rpx;
}
.share_input{
  border: 1px solid #DCDCDC;
  background-color: #ffffff;
  font-size: 16px;
  line-height: 48px;
  height: 48px;
}
.share_button{
  float: right;
  width: 100px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #ffffff;
  background-color: #52CAC1;
  border-radius: 0;
}
.share_button image{
  width: 20px;
  height: 20px;
  padding: 15px;
  display: block;
  margin: auto;
}