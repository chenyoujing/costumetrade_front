.title{
  background-color: #52CAC1;
  position: relative;
  z-index: 3;
  padding: 5px 0;
}
.title_text{
  float: left;
  width: 100px;
  text-align: center;
  font-size: 15px;
  color: #ffffff;
  line-height: 30px;
  height: 30px;
}
.title_input{
  background-color: #ffffff;
  font-family: Microsoft YaHei;
  padding: 0 10px;
  font-size: 14px;
  line-height: 30px;
  height:30px;
  min-height:30px;
}
.title_image,.image_search{
  float: right;
  background-color: transparent;
  width: 16px;
  height: 16px;
  z-index: 3;
  padding: 7px 10px;
}
.image_search{
  position: absolute;
  right: 56px;
}


.content{
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  bottom: 0;
}
.content_container{
  box-shadow: 0.5px 0.5px 2px #000000;
  position: relative;
  border-radius: 3px;
  transition: all 0.3s;
  left: 0;
}
.content_container > image{
  width: 100px;
  height: 100px;
  float: left;
}
.content_container_text{
  position: absolute;
  top: 0;
  left: 100px;
  right: 0;
  bottom: 0;
}
.content_container_title{
  font-size: 16px;
  line-height: 32px;
  border-bottom: 2px solid #DCDCDC;
  padding: 0 10px;
}
.date{
  font-size: 10px;
  line-height: 16px;
  margin-top: 10px;
  float: right;
  color: #666666;
}
.content_container_info{
  padding: 0 10px;
}
.info{
  font-size: 10px;
  color: #666666;
  line-height: 20px;
}
.info_txet{
  padding: 0 5px;
  float: left;
}
.unit_price{
  float: right;
  font-size: 10px;
  line-height: 20px;
  color: #666666;
 }
.price{
  float: right;
  font-size: 12px;
  line-height: 30px;
  color: #ff0000;
  position: absolute;
  bottom: 0;
  left: 10px;
 }
.price::before{
  content: "合计";
  color: #000000;
}
.button{
  width: 55px;
  height: 24px;
  font-size: 12px;
  line-height: 24px;
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: #52CAC1;
  color: #ffffff;
  text-align: center;
}