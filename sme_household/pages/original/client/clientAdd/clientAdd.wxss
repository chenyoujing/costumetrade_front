/*头部*/
@import "../../../../css/title.wxss";

.client_add{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 9;
}
.client_bg{
  width: 100%;
  height: 130px;
  filter: blur(3px);
}
.client_content{
  position: relative;
  padding: 50px 20px 10px;
}
.client_image{
  width: 90px;
  height: 90px;
  border-radius: 45px;
  position: absolute;
  top: -50px;
  left: 0;
  right: 0;
  margin: auto;
}
.client_info{
  box-shadow: 0.5px 0.5px 3px #000000;
  padding: 0 12%;
}
.info_text{
  font-size: 14px;
  line-height: 30px;
}
.info_text1{
  color: #000000;
}
.info_text2{
  color: #666666;
}
.wechat_number_title{
  background-color: #ffffff;
  float: left;
}
.wechat_number_button{
  float: right;
  background-color: #52CAC1;
  font-size: 10px;
  line-height: 30px;
  color: #ffffff;
  padding: 0 2px;
}
.wechat_image{
  float: left;
  width: 26px;
  height: 26px;
  padding: 2px;
}



.client_add scroll-view{
  position: absolute;
  top: 40px;
  bottom: 40px;
}
.client_add_input{
  padding: 10px 30px 0;
  position: relative;
}
.image_map{
  position: absolute;
  right: 30px;
  top: 10px;
  width: 20px;
  height: 20px;
  padding: 5px;
  z-index: 2;
}
.client_add_input:last-child{
  padding-bottom: 10px;
}
.client_add_input_text{
  width: 30%;
  float: left;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
}
.client_add_input1,.client_add_input2{
  border: 1px solid #52CAC1;
  font-size: 14px;
  padding: 0 7px; 
  height: 28px;
}

.client_add_input2{
  margin-right: 70px;
}
.client_add_picker{
  border: 1px solid #52CAC1;
  height: 28px;
  margin-left: 30%;
  text-align: center;
  width: auto;
  font-size: 14px;
  line-height: 28px;
  position: relative;
}
.picker_image{
  width: 10px;
  height: 10px;
  position: absolute;
  right: 10px;
  top: 0;
  bottom: 0;
  margin: auto;
}
.client_add_input_button{
  width: 60px;
  float: right;
  font-size: 16px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 30px;
  text-align: center;
  padding: 0;
  color: #ffffff;
}
.submit{
  font-size: 20px;
  border-radius: 0;
  background-color: #52CAC1;
  line-height: 40px;
  text-align: center;
  padding: 0;
  position: absolute;
  width: 170px;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  color: #ffffff;
}
