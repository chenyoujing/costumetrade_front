/*头部*/
@import "title.wxss";
.title_more{
  float: right;
  width: 16px;
  height: 16px;
  padding: 12px;
}

.report_scroll{
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  bottom: 0;
}
.time_select{ 
  display: flex;
  justify-content: center;
  align-items: center;
}
.time_select_line{
  height: 2px;
  background-color: #000000;
  width: 15px;
  margin: 0 5px;
}
.select_view{
  box-sizing: border-box;
  min-width: 50px;
  padding: 0 10px;
  font-size: 14px;
  line-height: 30px;
  height: 30px;
  margin: 5px 1px;
  border: 1px solid #a0a0a0;
  border-radius: 3px;
  text-align: center;
}
.selected{
  background-color: #E5E5E5;
  border-color: #E5E5E5;
}
.search_input_view{
  margin: 10px 100rpx;
  position: relative;
  z-index: 1;
}
.search_input{
  border: 1px solid #D7D7D7;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-radius: 5px;
  background-color: #ffffff;
}
.search_input_image{
  top: 1px;
}
.screen_scroll{
  box-shadow: 1px 1px 4px #000000;
  max-height: 0;
  position: absolute;
  background-color: #ffffff;
  transition: all 0.3s;
}
.screen_title{
  font-size: 16px;
  padding: 5px 10px 0;
}
.screen_content{
  display: flex;
  flex-wrap: wrap;
  margin: 5px;
}
.screen_view{
  display: inline-flex;
  align-items: center;
  min-width: 24px;
  padding: 0 8px;
  margin: 0 4px;
  height: 24px;
  border-radius: 12px;
  background-color: #E9E9E9;
  font-size: 12px;
}
.screen_selected{
  background-color: #52CAC1;
  color: #ffffff;
}
.screen{
  max-height: 50vh;
}
.canvas{
  width: 100%;
  height: 200px;
  text-align: center
}
.nodataImg{
  width:100%;
  display: inline-block;
  height: 100%
}
.more_function::before{
  right: 10px;
}

.report_form{
  border: 1px solid #DDDDDD;
  margin: 10px 50rpx;
}
.form_title,.form_content{
  display: flex;
}
.form_title{
  background-color: #52CAC1;
  color: #ffffff;
}
.form_content{
  border-bottom: 1px solid #EEEEEE;
}
.form_view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  min-height: 36px;
  word-break: break-all;
}
.form_sort{
  width: 14px;
  height: 14px;
}
.form_active{
  background-color: #EEEEEE;
}
