.title{
  background-color: #52CAC1;
  position: relative;
  z-index: 3;
  text-align: center;
  color: #ffffff;
  font-size: 16px;
  line-height: 40px;
  height: 40px;
}
.title_image_back{
  width: 12px;
  height: 12px;
  padding: 14px 10px;
  float: left;
}
.title_image_close{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  padding: 12px 10px;
}
.title_image_add{
  width: 16px;
  height: 16px;
  padding: 12px 10px;
  position: absolute;
  top: 0;
  left: 50%;
  right: 0;
  margin: auto;
}
.title_text{
  float: left;
  margin-left: 15px;
}

.container{
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  bottom: 0;
}